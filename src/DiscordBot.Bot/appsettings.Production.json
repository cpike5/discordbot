{
  "Elastic": {
    "Endpoints": [ "{ELASTICSEARCH_URL}" ],
    "ApiKey": null,
    "Environment": "production"
  },
  "ElasticApm": {
    "ServerUrl": null,
    "Environment": "production",
    "TransactionSampleRate": 0.1,
    "CaptureBody": "off",
    "SpanStackTraceMinDuration": "10ms"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Elastic.Serilog.Sinks" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Serilog.AspNetCore": "Warning",
        "Discord": "Warning",
        "Discord.WebSocket": "Warning",
        "DiscordBot": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/discordbot-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "buffered": true,
          "flushToDiskInterval": "00:00:01",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodes": [ "{ELASTICSEARCH_URL}" ],
          "dataStream": "logs-discordbot-prod",
          "bootstrapMethod": "Silent",
          "ilmPolicy": "logs"
        }
      }
    ]
  },
  "Database": {
    "SlowQueryThresholdMs": 500,
    "LogQueryParameters": false
  },
  "LogSanitization": {
    "Enabled": true
  },
  "OpenTelemetry": {
    "Tracing": {
      "SamplingRatio": 0.1,
      "EnableConsoleExporter": false,
      "OtlpEndpoint": "http://localhost:4317"
    }
  }
}
