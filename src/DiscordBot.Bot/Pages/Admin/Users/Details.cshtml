@page
@model DiscordBot.Bot.Pages.Admin.Users.DetailsModel
@{
    ViewData["Title"] = "User Details";
    var user = Model.ViewModel.User;
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center gap-2 text-sm text-text-secondary mb-2">
            <a asp-page="Index" class="hover:text-text-primary">Users</a>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-text-primary">Details</span>
        </div>
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-text-primary">User Details</h1>
                <p class="mt-1 text-sm text-text-secondary">View user information and activity history</p>
            </div>
            @if (Model.ViewModel.CanEdit)
            {
                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-primary">
                    <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit User
                </a>
            }
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- User Profile Card -->
        <div class="lg:col-span-1">
            <div class="bg-bg-secondary border border-border-primary rounded-lg p-6">
                <!-- Avatar -->
                <div class="flex justify-center mb-4">
                    @if (!string.IsNullOrEmpty(user.DiscordAvatarUrl))
                    {
                        <img class="h-24 w-24 rounded-full" src="@user.DiscordAvatarUrl" alt="@user.Email" />
                    }
                    else
                    {
                        <div class="h-24 w-24 rounded-full bg-accent-blue flex items-center justify-center">
                            <span class="text-white font-bold text-3xl">@user.Email.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                </div>

                <!-- User Info -->
                <div class="text-center mb-6">
                    <h2 class="text-xl font-bold text-text-primary">@(user.DisplayName ?? user.Email)</h2>
                    @if (!string.IsNullOrEmpty(user.DisplayName))
                    {
                        <p class="text-sm text-text-secondary mt-1">@user.Email</p>
                    }
                </div>

                <!-- Role Badge -->
                <div class="flex justify-center mb-6">
                    @{
                        var badgeVariant = user.HighestRole switch
                        {
                            "SuperAdmin" => DiscordBot.Bot.ViewModels.Components.BadgeVariant.Error,
                            "Admin" => DiscordBot.Bot.ViewModels.Components.BadgeVariant.Orange,
                            "Moderator" => DiscordBot.Bot.ViewModels.Components.BadgeVariant.Blue,
                            "Viewer" => DiscordBot.Bot.ViewModels.Components.BadgeVariant.Info,
                            _ => DiscordBot.Bot.ViewModels.Components.BadgeVariant.Default
                        };
                    }
                    <partial name="Shared/Components/_Badge" model="new DiscordBot.Bot.ViewModels.Components.BadgeViewModel { Text = user.HighestRole, Variant = badgeVariant }" />
                </div>

                <!-- Status -->
                <div class="mb-6">
                    @if (user.IsActive)
                    {
                        var activeStatus = new DiscordBot.Bot.ViewModels.Components.StatusIndicatorViewModel {
                            Status = DiscordBot.Bot.ViewModels.Components.StatusType.Online,
                            Text = "Active Account"
                        };
                        <partial name="Shared/Components/_StatusIndicator" model="activeStatus" />
                    }
                    else
                    {
                        var inactiveStatus = new DiscordBot.Bot.ViewModels.Components.StatusIndicatorViewModel {
                            Status = DiscordBot.Bot.ViewModels.Components.StatusType.Offline,
                            Text = "Inactive Account"
                        };
                        <partial name="Shared/Components/_StatusIndicator" model="inactiveStatus" />
                    }
                </div>

                <!-- User Stats -->
                <div class="space-y-3 border-t border-border-primary pt-4">
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Member Since</span>
                        <span class="text-text-primary font-medium">@user.CreatedAt.ToString("MMM d, yyyy")</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Last Login</span>
                        <span class="text-text-primary font-medium">
                            @if (user.LastLoginAt.HasValue)
                            {
                                @user.LastLoginAt.Value.ToString("MMM d, yyyy")
                            }
                            else
                            {
                                <span class="text-text-tertiary">Never</span>
                            }
                        </span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Email Confirmed</span>
                        <span class="text-text-primary font-medium">
                            @if (user.EmailConfirmed)
                            {
                                <span class="text-success">Yes</span>
                            }
                            else
                            {
                                <span class="text-warning">No</span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            <!-- Discord Section -->
            @if (user.IsDiscordLinked)
            {
                <div class="bg-bg-secondary border border-border-primary rounded-lg p-6 mt-6">
                    <h3 class="text-lg font-semibold text-text-primary mb-4">Discord Account</h3>
                    <div class="space-y-3">
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5 text-accent-blue" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028c.462-.63.874-1.295 1.226-1.994.021-.041.001-.09-.041-.106a13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 01.078.01c.12.098.246.198.373.292a.077.077 0 01-.006.127 12.299 12.299 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.839 19.839 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                            </svg>
                            <span class="text-sm font-medium text-text-primary">@user.DiscordUsername</span>
                        </div>
                        <div class="text-xs text-text-tertiary">
                            ID: @user.DiscordUserId
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="bg-bg-secondary border border-border-primary rounded-lg p-6 mt-6">
                    <div class="text-center py-4">
                        <svg class="w-12 h-12 mx-auto text-text-tertiary mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                        </svg>
                        <p class="text-sm text-text-secondary">No Discord account linked</p>
                    </div>
                </div>
            }
        </div>

        <!-- Activity Log -->
        <div class="lg:col-span-2">
            <div class="bg-bg-secondary border border-border-primary rounded-lg">
                <div class="px-6 py-4 border-b border-border-primary">
                    <h2 class="text-lg font-semibold text-text-primary">Recent Activity</h2>
                </div>
                <div class="overflow-x-auto">
                    @if (Model.ViewModel.RecentActivity.Any())
                    {
                        <table class="min-w-full divide-y divide-border-primary">
                            <thead class="bg-bg-tertiary">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Action</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Actor</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Details</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Date</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-border-primary">
                                @foreach (var activity in Model.ViewModel.RecentActivity)
                                {
                                    <tr class="hover:bg-bg-tertiary/50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            @{
                                                var actionBadge = activity.Action switch
                                                {
                                                    DiscordBot.Core.Entities.UserActivityAction.UserCreated => (Text: "Created", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Success),
                                                    DiscordBot.Core.Entities.UserActivityAction.UserUpdated => (Text: "Updated", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Info),
                                                    DiscordBot.Core.Entities.UserActivityAction.UserEnabled => (Text: "Enabled", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Success),
                                                    DiscordBot.Core.Entities.UserActivityAction.UserDisabled => (Text: "Disabled", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Warning),
                                                    DiscordBot.Core.Entities.UserActivityAction.RoleAssigned => (Text: "Role Assigned", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Blue),
                                                    DiscordBot.Core.Entities.UserActivityAction.RoleRemoved => (Text: "Role Removed", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Warning),
                                                    DiscordBot.Core.Entities.UserActivityAction.PasswordReset => (Text: "Password Reset", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Orange),
                                                    DiscordBot.Core.Entities.UserActivityAction.DiscordLinked => (Text: "Discord Linked", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Blue),
                                                    DiscordBot.Core.Entities.UserActivityAction.DiscordUnlinked => (Text: "Discord Unlinked", Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Warning),
                                                    _ => (Text: activity.Action.ToString(), Variant: DiscordBot.Bot.ViewModels.Components.BadgeVariant.Default)
                                                };
                                            }
                                            <partial name="Shared/Components/_Badge" model="new DiscordBot.Bot.ViewModels.Components.BadgeViewModel {
                                                Text = actionBadge.Text,
                                                Variant = actionBadge.Variant,
                                                Size = DiscordBot.Bot.ViewModels.Components.BadgeSize.Small
                                            }" />
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-primary">
                                            @activity.ActorEmail
                                        </td>
                                        <td class="px-6 py-4 text-sm text-text-secondary">
                                            @if (!string.IsNullOrEmpty(activity.Details))
                                            {
                                                <span class="truncate max-w-md block">@activity.Details</span>
                                            }
                                            else
                                            {
                                                <span class="text-text-tertiary">-</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                                            @activity.Timestamp.ToString("MMM d, yyyy h:mm tt")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="p-12 text-center">
                            @{
                                var emptyState = new DiscordBot.Bot.ViewModels.Components.EmptyStateViewModel {
                                    Type = DiscordBot.Bot.ViewModels.Components.EmptyStateType.NoData,
                                    Title = "No activity yet",
                                    Description = "This user has no recorded activity"
                                };
                            }
                            <partial name="Shared/Components/_EmptyState" model="emptyState" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
