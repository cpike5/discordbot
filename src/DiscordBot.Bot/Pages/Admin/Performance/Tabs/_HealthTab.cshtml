@model DiscordBot.Bot.ViewModels.Pages.HealthMetricsViewModel
@using DiscordBot.Bot.ViewModels.Pages
@using System.Text.Json

<div data-tab="health"
     data-initial-latency="@Model.Health.LatencyMs"
     data-working-set-mb="@Model.WorkingSetMB"
     data-cpu-percent="@Model.CpuUsagePercent"
     data-latency-samples="@Html.Raw(JsonSerializer.Serialize(Model.RecentLatencySamples.Select(s => s.LatencyMs)))">

<!-- Uptime & Connection Status Row -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
    <!-- Uptime Card -->
    <div class="chart-card">
        <div class="chart-card-header">
            <div>
                <h2 class="chart-card-title">Uptime</h2>
                <p class="chart-card-subtitle">Current session statistics</p>
            </div>
        </div>
        <div class="chart-card-body">
            <div class="uptime-display">
                <div class="uptime-percentage healthy">@Model.Uptime30DFormatted</div>
                <div class="uptime-label">Uptime (30 days)</div>
                @if (Model.SessionStartUtc.HasValue)
                {
                    <div class="uptime-since">Online since <span data-utc-time="@Model.SessionStartUtc.Value.ToString("o")">@Model.SessionStartFormatted</span></div>
                }
                else
                {
                    <div class="uptime-since">Online since Unknown</div>
                }
            </div>
            <div class="grid grid-cols-2 gap-4 mt-4 pt-4 border-t border-border-primary">
                <div class="text-center">
                    <div class="text-xl font-bold text-text-primary">@Model.UptimeFormatted</div>
                    <div class="text-xs text-text-tertiary">Current session</div>
                </div>
                <div class="text-center">
                    <div class="text-xl font-bold text-text-primary">@Model.ConnectionStats.ReconnectionCount</div>
                    <div class="text-xs text-text-tertiary">Restarts (30d)</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Connection State Card -->
    <div class="chart-card">
        <div class="chart-card-header">
            <div>
                <h2 class="chart-card-title">Connection State</h2>
                <p class="chart-card-subtitle">Discord gateway status</p>
            </div>
        </div>
        <div class="chart-card-body">
            <div class="health-status-large">
                <svg class="health-status-icon text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="health-status-label text-success">@Model.Health.ConnectionState</div>
                <div class="health-status-sublabel">Gateway: wss://gateway.discord.gg</div>
            </div>
        </div>
    </div>

    <!-- Heartbeat Latency Gauge -->
    <div class="chart-card">
        <div class="chart-card-header">
            <div>
                <h2 class="chart-card-title">Heartbeat Latency</h2>
                <p class="chart-card-subtitle">Discord gateway ping</p>
            </div>
        </div>
        <div class="chart-card-body">
            <div class="gauge-chart-container">
                <canvas id="healthLatencyGauge"></canvas>
                <div class="gauge-center-text">
                    <span class="gauge-center-value" id="healthCurrentLatency">@Model.Health.LatencyMs</span>
                    <span class="gauge-center-unit">ms</span>
                </div>
            </div>
            <div class="gauge-labels">
                <span>0</span>
                <span>250</span>
                <span>500</span>
            </div>
            @if (Model.RecentLatencySamples.Any())
            {
                <div class="mt-4">
                    <canvas id="healthLatencySparkline" height="50"></canvas>
                </div>
                <p class="text-xs text-text-tertiary text-center mt-2">Last @Model.RecentLatencySamples.Count heartbeats</p>
            }
            <p class="text-xs text-text-tertiary text-center mt-2">Avg: @Model.LatencyStats.Average.ToString("F0")ms | P95: @Model.LatencyStats.P95</p>
        </div>
    </div>
</div>

<!-- Memory & CPU Gauges -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <!-- Memory Usage -->
    <div class="chart-card">
        <div class="chart-card-header">
            <div>
                <h2 class="chart-card-title">Memory Usage</h2>
                <p class="chart-card-subtitle">Process memory consumption</p>
            </div>
            <span class="status-badge status-badge-connected">Normal</span>
        </div>
        <div class="chart-card-body">
            <div class="flex items-center gap-8">
                <div class="gauge-chart-container">
                    <canvas id="healthMemoryGauge"></canvas>
                    <div class="gauge-center-text">
                        <span class="gauge-center-value" id="healthMemoryUsage">@Model.WorkingSetMB</span>
                        <span class="gauge-center-unit">MB</span>
                    </div>
                </div>
                <div class="flex-1 space-y-3">
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Working Set</span>
                        <span class="text-text-primary font-medium">@Model.WorkingSetMB MB</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Private Memory</span>
                        <span class="text-text-primary font-medium">@Model.PrivateMemoryMB MB</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Max Allocated</span>
                        <span class="text-text-primary font-medium">@Model.MaxAllocatedMemoryMB MB</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">GC Collections (Gen 2)</span>
                        <span class="text-text-primary font-medium">@Model.Gen2Collections</span>
                    </div>
                </div>
            </div>
            <div class="gauge-labels" style="max-width: 180px;">
                <span>0</span>
                <span>512</span>
                <span>1024</span>
            </div>
        </div>
    </div>

    <!-- CPU Usage -->
    <div class="chart-card">
        <div class="chart-card-header">
            <div>
                <h2 class="chart-card-title">CPU Usage</h2>
                <p class="chart-card-subtitle">Process CPU utilization</p>
            </div>
            <span class="status-badge status-badge-connected">Normal</span>
        </div>
        <div class="chart-card-body">
            <div class="flex items-center gap-8">
                <div class="gauge-chart-container">
                    <canvas id="healthCpuGauge"></canvas>
                    <div class="gauge-center-text">
                        <span class="gauge-center-value" id="healthCpuUsage">0</span>
                        <span class="gauge-center-unit">%</span>
                    </div>
                </div>
                <div class="flex-1 space-y-3">
                    <div class="flex justify-between text-sm">
                        <span class="text-text-secondary">Thread Count</span>
                        <span class="text-text-primary font-medium">@Model.ThreadCount</span>
                    </div>
                </div>
            </div>
            <div class="gauge-labels" style="max-width: 180px;">
                <span>0%</span>
                <span>50%</span>
                <span>100%</span>
            </div>
        </div>
    </div>
</div>

<!-- Memory Breakdown Section -->
@if (Model.MemoryDiagnostics != null)
{
    <div class="chart-card mb-6">
        <div class="chart-card-header">
            <div>
                <h2 class="chart-card-title">Memory Breakdown</h2>
                <p class="chart-card-subtitle">GC heap details and per-service memory usage</p>
            </div>
        </div>
        <div class="chart-card-body">
            <!-- GC Generation Sizes -->
            <div class="mb-6">
                <h3 class="text-sm font-medium text-text-primary mb-3">GC Heap Generations</h3>
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-3">
                    <div class="text-center p-3 bg-bg-tertiary rounded-lg">
                        <div class="text-lg font-bold text-text-primary">
                            @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.GcGenerations.Gen0SizeBytes)
                        </div>
                        <div class="text-xs text-text-tertiary">Gen 0</div>
                    </div>
                    <div class="text-center p-3 bg-bg-tertiary rounded-lg">
                        <div class="text-lg font-bold text-text-primary">
                            @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.GcGenerations.Gen1SizeBytes)
                        </div>
                        <div class="text-xs text-text-tertiary">Gen 1</div>
                    </div>
                    <div class="text-center p-3 bg-bg-tertiary rounded-lg">
                        <div class="text-lg font-bold text-text-primary">
                            @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.GcGenerations.Gen2SizeBytes)
                        </div>
                        <div class="text-xs text-text-tertiary">Gen 2</div>
                    </div>
                    <div class="text-center p-3 bg-bg-tertiary rounded-lg">
                        <div class="text-lg font-bold text-text-primary">
                            @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.GcGenerations.LohSizeBytes)
                        </div>
                        <div class="text-xs text-text-tertiary">LOH</div>
                    </div>
                    <div class="text-center p-3 bg-bg-tertiary rounded-lg">
                        <div class="text-lg font-bold text-text-primary">
                            @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.GcGenerations.PohSizeBytes)
                        </div>
                        <div class="text-xs text-text-tertiary">POH</div>
                    </div>
                    <div class="text-center p-3 bg-bg-tertiary rounded-lg">
                        <div class="text-lg font-bold @HealthMetricsViewModel.GetFragmentationClass(Model.MemoryDiagnostics.GcGenerations.FragmentationPercent)">
                            @Model.MemoryDiagnostics.GcGenerations.FragmentationPercent.ToString("F1")%
                        </div>
                        <div class="text-xs text-text-tertiary">Fragmentation</div>
                    </div>
                </div>
            </div>

            <!-- Service Memory Breakdown -->
            @if (Model.MemoryDiagnostics.ServiceReports.Any())
            {
                <div class="mb-6">
                    <h3 class="text-sm font-medium text-text-primary mb-3">Service Memory Usage</h3>
                    <div class="space-y-3">
                        @foreach (var service in Model.MemoryDiagnostics.ServiceReports)
                        {
                            var percentOfTotal = Model.MemoryDiagnostics.TotalAccountedBytes > 0
                                ? (double)service.EstimatedBytes / Model.MemoryDiagnostics.TotalAccountedBytes * 100
                                : 0;

                            <div class="bg-bg-tertiary rounded-lg p-3">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-medium text-text-primary">@service.ServiceName</span>
                                    <span class="text-sm text-text-secondary">@HealthMetricsViewModel.FormatBytes(service.EstimatedBytes)</span>
                                </div>
                                <div class="progress-bar-container progress-bar-sm">
                                    <div class="progress-bar-fill progress-bar-healthy" style="width: @percentOfTotal.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%;"></div>
                                </div>
                                @if (!string.IsNullOrEmpty(service.Details))
                                {
                                    <div class="text-xs text-text-tertiary mt-1">@service.Details</div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Memory Summary -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-4 border-t border-border-primary">
                <div class="text-center">
                    <div class="text-xl font-bold text-text-primary">
                        @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.TotalAccountedBytes)
                    </div>
                    <div class="text-xs text-text-tertiary">Accounted</div>
                </div>
                <div class="text-center">
                    <div class="text-xl font-bold text-warning">
                        @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.UnaccountedBytes)
                    </div>
                    <div class="text-xs text-text-tertiary">Unaccounted</div>
                </div>
                <div class="text-center">
                    <div class="text-xl font-bold text-text-primary">
                        @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.ManagedHeapBytes)
                    </div>
                    <div class="text-xs text-text-tertiary">Managed Heap</div>
                </div>
                <div class="text-center">
                    <div class="text-xl font-bold text-text-primary">
                        @HealthMetricsViewModel.FormatBytes(Model.MemoryDiagnostics.GcGenerations.TotalCommittedBytes)
                    </div>
                    <div class="text-xs text-text-tertiary">Committed</div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Latency History Chart -->
<div class="chart-card mb-6">
    <div class="chart-card-header">
        <div>
            <h2 class="chart-card-title">Latency History</h2>
            <p class="chart-card-subtitle">Heartbeat latency over time</p>
        </div>
        <select id="healthLatencyTimeRange" class="px-3 py-1.5 text-sm bg-bg-primary border border-border-primary rounded-md text-text-primary focus:border-border-focus transition-colors">
            <option value="1">Last hour</option>
            <option value="6">Last 6 hours</option>
            <option value="24" selected>Last 24 hours</option>
            <option value="168">Last 7 days</option>
        </select>
    </div>
    <div class="chart-card-body">
        <div class="chart-container chart-container-lg">
            <canvas id="healthLatencyHistoryChart"></canvas>
        </div>
    </div>
</div>

<!-- Reconnection History -->
<div class="chart-card">
    <div class="chart-card-header">
        <div>
            <h2 class="chart-card-title">Reconnection History</h2>
            <p class="chart-card-subtitle">Gateway disconnections and reconnections (last 7 days)</p>
        </div>
    </div>
    <div class="chart-card-body">
        <div class="timeline">
            @if (Model.RecentConnectionEvents.Any())
            {
                @foreach (var evt in Model.RecentConnectionEvents.Take(10))
                {
                    var dotClass = evt.EventType.ToUpperInvariant() switch
                    {
                        "CONNECTED" => "timeline-dot-success",
                        "CONNECTING" => "timeline-dot-warning",
                        _ => "timeline-dot-error"
                    };

                    <div class="timeline-entry">
                        <div class="timeline-dot @dotClass"></div>
                        <div class="timeline-content">
                            <div class="timeline-time" data-utc-time="@evt.Timestamp.ToString("o")">@evt.Timestamp.ToString("MMM dd, yyyy 'at' HH:mm")</div>
                            <div class="timeline-title">@evt.EventType</div>
                            @if (!string.IsNullOrEmpty(evt.Reason) || !string.IsNullOrEmpty(evt.Details))
                            {
                                <div class="timeline-description">@(evt.Reason ?? evt.Details)</div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-8">
                    <svg class="w-12 h-12 mx-auto mb-3 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="text-text-secondary font-medium">No reconnections</div>
                    <div class="text-text-tertiary text-sm">The bot has maintained a stable connection</div>
                </div>
            }
        </div>

        @if (Model.RecentConnectionEvents.Any())
        {
            <!-- Summary Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6 pt-6 border-t border-border-primary">
                <div class="text-center">
                    <div class="text-2xl font-bold text-text-primary">@Model.ConnectionStats.TotalEvents</div>
                    <div class="text-xs text-text-tertiary">Total Events</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-success">@Model.RecentConnectionEvents.Count(e => e.EventType.Equals("Connected", StringComparison.OrdinalIgnoreCase))</div>
                    <div class="text-xs text-text-tertiary">Connected</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-warning">@Model.ConnectionStats.ReconnectionCount</div>
                    <div class="text-xs text-text-tertiary">Reconnections</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-text-primary">@Model.ConnectionStats.AverageSessionDuration.TotalMinutes.ToString("F0")m</div>
                    <div class="text-xs text-text-tertiary">Avg Session</div>
                </div>
            </div>
        }
    </div>
</div>
</div>
