                <span>250</span>
                <span>500</span>
            </div>
            @if (Model.ViewModel.RecentLatencySamples.Any())
            {
                <div class="mt-4">
                    <canvas id="latencySparkline" height="50"></canvas>
                </div>
                <p class="text-xs text-text-tertiary text-center mt-2">Last @Model.ViewModel.RecentLatencySamples.Count heartbeats</p>
            }
            <p class="text-xs text-text-tertiary text-center mt-2">Avg: @Model.ViewModel.LatencyStats.Average.ToString("F0")ms | P95: @Model.ViewModel.LatencyStats.P95</p>
