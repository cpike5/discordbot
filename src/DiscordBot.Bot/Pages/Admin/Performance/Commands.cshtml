@page
@model DiscordBot.Bot.Pages.Admin.Performance.CommandsModel
@using DiscordBot.Bot.ViewModels.Pages
@{
    ViewData["Title"] = "Command Performance";
    ViewData["Breadcrumbs"] = new List<(string Text, string? Url)>
    {
        ("Dashboard", "/"),
        ("Bot Performance", null),
        ("Commands", null)
    };
}

@section Styles {
    <link rel="stylesheet" href="~/css/performance-pages.css" />
}

<!-- Page Header -->
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
    <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-text-primary">Command Performance</h1>
        <p class="text-text-secondary mt-1">Response times, throughput, and error analysis</p>
    </div>

    <!-- Time Range Selector -->
    <div class="flex items-center gap-2">
        <div class="inline-flex rounded-lg border border-border-primary overflow-hidden">
            <button class="time-range-btn" data-hours="24">24h</button>
            <button class="time-range-btn" data-hours="168">7d</button>
            <button class="time-range-btn" data-hours="720">30d</button>
        </div>
    </div>
</div>

<!-- Navigation Tabs -->
@await Html.PartialAsync("Components/_PerformanceTabs", new DiscordBot.Bot.ViewModels.Components.PerformanceTabsViewModel
{
    ActiveTab = "commands"
})

<!-- Tab Content -->
@await Html.PartialAsync("Tabs/_CommandsTab", Model.ViewModel)

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Chart.js default dark theme settings
        Chart.defaults.color = '#a8a5a3';
        Chart.defaults.borderColor = '#3f4447';

        // Expose selectedHours globally for partial to access
        window.selectedHours = @Model.Hours;
        let refreshInterval;

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', async function() {
            // Update active button based on selectedHours
            document.querySelectorAll('.time-range-btn').forEach(btn => {
                if (parseInt(btn.dataset.hours, 10) === window.selectedHours) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });

            // Time range button click handlers
            document.querySelectorAll('.time-range-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const hours = parseInt(this.dataset.hours, 10);

                    // Save to localStorage
                    localStorage.setItem('commandsTimeRange', hours);

                    // Navigate to page with hours parameter to update server-side data
                    window.location.href = `?hours=${hours}`;
                });
            });

            // Initialize the commands tab (function defined in partial)
            if (typeof window.initCommandsTab === 'function') {
                await window.initCommandsTab();
            }

            // Start auto-refresh
            startAutoRefresh();
        });

        function startAutoRefresh() {
            refreshInterval = setInterval(async () => {
                if (typeof window.initCommandsTab === 'function') {
                    await window.initCommandsTab();
                }
            }, 30000);
        }

        // Stop refresh when page hidden
        document.addEventListener('visibilitychange', () => {
            if (document.hidden) {
                if (refreshInterval) clearInterval(refreshInterval);
            } else {
                startAutoRefresh();
            }
        });
    </script>
}
