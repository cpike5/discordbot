@page
@model DiscordBot.Bot.Pages.Admin.Performance.CommandsModel
@using DiscordBot.Bot.ViewModels.Pages
@{
    ViewData["Title"] = "Command Performance";
    ViewData["Breadcrumbs"] = new List<(string Text, string? Url)>
    {
        ("Dashboard", "/"),
        ("Bot Performance", null),
        ("Commands", null)
    };
}

@section Styles {
    <style>
        /* Performance Page Shared Styles */
        .performance-tabs {
            display: flex;
            gap: 0.5rem;
            border-bottom: 2px solid rgb(63, 68, 71);
            margin-bottom: 1.5rem;
            overflow-x: auto;
            scrollbar-width: thin;
        }

        .performance-tab {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
            font-weight: 500;
            color: rgb(168, 165, 163);
            border-bottom: 2px solid transparent;
            margin-bottom: -2px;
            transition: all 0.2s;
            white-space: nowrap;
            text-decoration: none;
        }

        .performance-tab:hover {
            color: rgb(215, 211, 208);
            border-bottom-color: rgb(99, 102, 104);
        }

        .performance-tab.active {
            color: rgb(9, 142, 207);
            border-bottom-color: rgb(9, 142, 207);
        }

        .tab-icon {
            width: 1.25rem;
            height: 1.25rem;
        }

        /* Metric Cards */
        .metric-card {
            background: rgb(35, 38, 40);
            border: 1px solid rgb(63, 68, 71);
            border-radius: 0.5rem;
            padding: 1.25rem;
        }

        .metric-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 0.75rem;
        }

        .metric-label {
            font-size: 0.875rem;
            color: rgb(168, 165, 163);
            font-weight: 500;
        }

        .metric-value {
            font-size: 2rem;
            font-weight: 700;
            color: rgb(215, 211, 208);
            line-height: 1;
        }

        .metric-unit {
            font-size: 1rem;
            font-weight: 500;
            color: rgb(168, 165, 163);
            margin-left: 0.25rem;
        }

        .metric-trend {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            font-size: 0.75rem;
            margin-top: 0.5rem;
        }

        .metric-trend-up {
            color: rgb(16, 185, 129);
        }

        .metric-trend-down {
            color: rgb(239, 68, 68);
        }

        .metric-trend-neutral {
            color: rgb(168, 165, 163);
        }

        /* Chart Card */
        .chart-card {
            background: rgb(35, 38, 40);
            border: 1px solid rgb(63, 68, 71);
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .chart-card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.25rem;
            border-bottom: 1px solid rgb(63, 68, 71);
        }

        .chart-card-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: rgb(215, 211, 208);
            margin: 0;
        }

        .chart-card-subtitle {
            font-size: 0.875rem;
            color: rgb(168, 165, 163);
            margin: 0.25rem 0 0;
        }

        .chart-card-body {
            padding: 1.25rem;
        }

        .chart-container {
            position: relative;
            height: 300px;
        }

        .chart-container-lg {
            height: 400px;
        }

        /* Performance Grid Layouts */
        .performance-grid-2 {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @@media (min-width: 768px) {
            .performance-grid-2 {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Performance Table */
        .performance-table {
            width: 100%;
            border-collapse: collapse;
        }

        .performance-table thead {
            background: rgb(47, 51, 54);
        }

        .performance-table th {
            padding: 0.75rem 1rem;
            text-align: left;
            font-size: 0.75rem;
            font-weight: 600;
            color: rgb(168, 165, 163);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .performance-table td {
            padding: 0.75rem 1rem;
            border-top: 1px solid rgb(63, 68, 71);
            font-size: 0.875rem;
            color: rgb(215, 211, 208);
        }

        .performance-table tbody tr:hover {
            background: rgba(9, 142, 207, 0.05);
        }

        /* Sparkline */
        .sparkline-container {
            display: flex;
            align-items: flex-end;
            gap: 2px;
            height: 24px;
            max-width: 120px;
        }

        .sparkline-bar {
            flex: 1;
            background: rgb(9, 142, 207);
            border-radius: 2px;
            min-width: 3px;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

        .sparkline-bar:hover {
            opacity: 1;
        }

        .sparkline-bar.elevated {
            background: rgb(245, 158, 11);
        }

        /* Status Badges */
        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .status-badge-connected {
            background: rgba(16, 185, 129, 0.1);
            color: rgb(16, 185, 129);
        }

        .status-badge-reconnecting {
            background: rgba(245, 158, 11, 0.1);
            color: rgb(245, 158, 11);
        }

        /* Severity Badge */
        .severity-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .severity-warning {
            background: rgba(245, 158, 11, 0.1);
            color: rgb(245, 158, 11);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 1.5rem;
        }

        .empty-state-icon {
            width: 3rem;
            height: 3rem;
            margin: 0 auto 1rem;
            color: rgb(168, 165, 163);
        }

        .empty-state-title {
            font-size: 1rem;
            font-weight: 600;
            color: rgb(215, 211, 208);
            margin-bottom: 0.5rem;
        }

        .empty-state-description {
            font-size: 0.875rem;
            color: rgb(168, 165, 163);
        }

        /* Time Range Selector */
        .time-range-btn {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.375rem;
            transition: all 0.2s;
            text-decoration: none;
            border: 1px solid rgb(63, 68, 71);
        }

        .time-range-btn.active {
            background: rgba(9, 142, 207, 0.2);
            color: rgb(9, 142, 207);
            border-color: rgba(9, 142, 207, 0.3);
        }

        .time-range-btn:not(.active) {
            background: rgb(35, 38, 40);
            color: rgb(168, 165, 163);
        }

        .time-range-btn:not(.active):hover {
            color: rgb(215, 211, 208);
        }
    </style>
}

<!-- Page Header -->
