@page
@model DiscordBot.Bot.Pages.Admin.Notifications.IndexModel
@using DiscordBot.Bot.ViewModels.Components
@using DiscordBot.Bot.ViewModels.Pages
@using DiscordBot.Core.Enums
@{
    ViewData["Title"] = "Notifications";
    var startItem = Model.ViewModel.TotalCount > 0 ? (Model.ViewModel.CurrentPage - 1) * Model.ViewModel.PageSize + 1 : 0;
    var endItem = Math.Min(Model.ViewModel.CurrentPage * Model.ViewModel.PageSize, Model.ViewModel.TotalCount);
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div class="flex items-center gap-3">
            <h1 class="text-h1 text-text-primary">Notifications</h1>
            <partial name="Shared/Components/_Badge" model="new BadgeViewModel { Text = Model.ViewModel.TotalCount.ToString(), Variant = BadgeVariant.Blue, Size = BadgeSize.Medium }" />
        </div>
        <div class="flex items-center gap-3">
            <!-- Bulk Actions (shown when items selected) -->
            <div id="bulkActions" class="hidden flex items-center gap-2">
                <span class="text-sm text-text-secondary"><span id="selectedCount">0</span> selected</span>
                <button type="button" id="markSelectedRead" class="btn btn-secondary btn-sm">
                    <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Mark Read
                </button>
                <button type="button" id="deleteSelected" class="btn btn-error btn-sm">
                    <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Delete
                </button>
            </div>
            <button type="button" id="markAllRead" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                </svg>
                Mark All Read
            </button>
            @if (Model.ViewModel.Filters.HasActiveFilters)
            {
                <a asp-page="Index" class="btn btn-secondary">
                    <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Clear Filters
                </a>
            }
        </div>
    </div>

    <!-- Filter Panel -->
    <div class="bg-bg-secondary border border-border-primary rounded-lg mb-6">
        <button type="button"
                id="filterToggle"
                class="w-full flex items-center justify-between px-5 py-4 text-left"
                aria-expanded="true"
                aria-controls="filterContent"
                onclick="toggleFilterPanel()">
            <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                </svg>
                <span class="text-lg font-semibold text-text-primary">Filters</span>
                @if (Model.ViewModel.Filters.HasActiveFilters)
                {
                    <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                        Text = $"{CountActiveFilters()} active",
                        Variant = BadgeVariant.Orange,
                        Size = BadgeSize.Small
                    })" />
                }
            </div>
            <svg id="filterChevron" class="w-5 h-5 text-text-secondary transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </button>

        <div id="filterContent" class="overflow-hidden transition-all duration-300 max-h-[1000px]">
            <div class="border-t border-border-primary p-6">
                <form method="get" id="filterForm">
                    <!-- Quick Date Presets -->
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-text-primary mb-2">Quick Date Range</label>
                        @{
                            var today = DateTime.UtcNow.Date;
                            var isToday = Model.StartDate.HasValue && Model.EndDate.HasValue &&
                                         Model.StartDate.Value.Date == today && Model.EndDate.Value.Date == today;
                            var is7Days = Model.StartDate.HasValue && Model.EndDate.HasValue &&
                                         Model.StartDate.Value.Date == today.AddDays(-7) && Model.EndDate.Value.Date == today;
                            var is30Days = Model.StartDate.HasValue && Model.EndDate.HasValue &&
                                          Model.StartDate.Value.Date == today.AddDays(-30) && Model.EndDate.Value.Date == today;

                            string GetPresetClass(bool isActive) => isActive
                                ? "px-3 py-1.5 text-xs font-medium bg-accent-blue text-white border border-accent-blue rounded-md hover:bg-accent-blue/90 transition-colors"
                                : "px-3 py-1.5 text-xs font-medium bg-bg-tertiary text-text-secondary border border-border-primary rounded-md hover:bg-bg-hover transition-colors";
                        }
                        <div class="flex flex-wrap gap-2">
                            <button type="button" onclick="setDatePreset('today')" class="@GetPresetClass(isToday)">
                                Today
                            </button>
                            <button type="button" onclick="setDatePreset('7days')" class="@GetPresetClass(is7Days)">
                                Last 7 Days
                            </button>
                            <button type="button" onclick="setDatePreset('30days')" class="@GetPresetClass(is30Days)">
                                Last 30 Days
                            </button>
                        </div>
                    </div>

                    <!-- Filter Grid -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4">
                        <!-- Start Date -->
                        <div>
                            <label for="StartDate" class="block text-sm font-medium text-text-primary mb-1">Start Date</label>
                            <input type="date"
                                   id="StartDate"
                                   name="StartDate"
                                   value="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                   class="w-full px-3 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors" />
                        </div>

                        <!-- End Date -->
                        <div>
                            <label for="EndDate" class="block text-sm font-medium text-text-primary mb-1">End Date</label>
                            <input type="date"
                                   id="EndDate"
                                   name="EndDate"
                                   value="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                   class="w-full px-3 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors" />
                        </div>

                        <!-- Type Filter -->
                        <div>
                            <label for="Type" class="block text-sm font-medium text-text-primary mb-1">Type</label>
                            <select id="Type"
                                    name="Type"
                                    class="w-full px-3 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors cursor-pointer">
                                <option value="">All Types</option>
                                <option value="@((int)NotificationType.PerformanceAlert)" selected="@(Model.Type == NotificationType.PerformanceAlert)">Performance Alert</option>
                                <option value="@((int)NotificationType.BotStatus)" selected="@(Model.Type == NotificationType.BotStatus)">Bot Status</option>
                                <option value="@((int)NotificationType.GuildEvent)" selected="@(Model.Type == NotificationType.GuildEvent)">Guild Event</option>
                                <option value="@((int)NotificationType.CommandError)" selected="@(Model.Type == NotificationType.CommandError)">Command Error</option>
                            </select>
                        </div>

                        <!-- Status Filter -->
                        <div>
                            <label for="IsRead" class="block text-sm font-medium text-text-primary mb-1">Status</label>
                            <select id="IsRead"
                                    name="IsRead"
                                    class="w-full px-3 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors cursor-pointer">
                                <option value="">All</option>
                                <option value="false" selected="@(Model.IsRead == false)">Unread</option>
                                <option value="true" selected="@(Model.IsRead == true)">Read</option>
                            </select>
                        </div>

                        <!-- Severity Filter -->
                        <div>
                            <label for="Severity" class="block text-sm font-medium text-text-primary mb-1">Severity</label>
                            <select id="Severity"
                                    name="Severity"
                                    class="w-full px-3 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors cursor-pointer">
                                <option value="">All</option>
                                <option value="@((int)AlertSeverity.Critical)" selected="@(Model.Severity == AlertSeverity.Critical)">Critical</option>
                                <option value="@((int)AlertSeverity.Warning)" selected="@(Model.Severity == AlertSeverity.Warning)">Warning</option>
                                <option value="@((int)AlertSeverity.Info)" selected="@(Model.Severity == AlertSeverity.Info)">Info</option>
                            </select>
                        </div>

                        <!-- Guild Filter -->
                        <div>
                            <label for="GuildId" class="block text-sm font-medium text-text-primary mb-1">Server</label>
                            <select id="GuildId"
                                    name="GuildId"
                                    class="w-full px-3 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors cursor-pointer">
                                <option value="">All Servers</option>
                                @foreach (var guild in Model.AvailableGuilds)
                                {
                                    <option value="@guild.Id" selected="@(Model.GuildId == guild.Id)">@guild.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Search Input -->
                    <div class="mt-4">
                        <label for="SearchTerm" class="block text-sm font-medium text-text-primary mb-1">Search</label>
                        <div class="relative max-w-md">
                            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                            <input type="search"
                                   id="SearchTerm"
                                   name="SearchTerm"
                                   value="@Model.SearchTerm"
                                   placeholder="Search by title or message..."
                                   class="w-full pl-10 pr-4 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary placeholder-text-tertiary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors" />
                        </div>
                    </div>

                    <!-- Filter Actions -->
                    <div class="flex items-center gap-3 mt-6 pt-4 border-t border-border-secondary">
                        <button type="submit" class="btn btn-primary">
                            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                            </svg>
                            Apply Filters
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            Reset
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Desktop Table -->
    <div class="bg-bg-secondary border border-border-primary rounded-lg overflow-hidden hidden md:block">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-bg-tertiary">
                    <tr>
                        <th scope="col" class="px-4 py-4 text-left">
                            <input type="checkbox" id="selectAll" class="w-4 h-4 rounded border-border-primary bg-bg-primary text-accent-blue focus:ring-accent-blue cursor-pointer" />
                        </th>
                        <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">
                            Type
                        </th>
                        <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">
                            Title
                        </th>
                        <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider hidden lg:table-cell">
                            Server
                        </th>
                        <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">
                            Status
                        </th>
                        <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">
                            Time
                        </th>
                        <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-primary">
                    @if (Model.ViewModel.Notifications.Any())
                    {
                        @foreach (var notification in Model.ViewModel.Notifications)
                        {
                            <tr class="hover:bg-bg-hover/50 transition-colors @(!notification.IsRead ? "bg-bg-hover/30" : "")">
                                <!-- Checkbox -->
                                <td class="px-4 py-4">
                                    <input type="checkbox"
                                           class="notification-checkbox w-4 h-4 rounded border-border-primary bg-bg-primary text-accent-blue focus:ring-accent-blue cursor-pointer"
                                           value="@notification.Id" />
                                </td>
                                <!-- Type -->
                                <td class="px-4 py-4">
                                    <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                                        Text = notification.TypeDisplay,
                                        Variant = GetTypeBadgeVariant(notification.Type),
                                        Size = BadgeSize.Small
                                    })" />
                                    @if (notification.Severity.HasValue)
                                    {
                                        <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                                            Text = notification.SeverityDisplay!,
                                            Variant = GetSeverityBadgeVariant(notification.Severity),
                                            Size = BadgeSize.Small
                                        })" />
                                    }
                                </td>
                                <!-- Title & Message -->
                                <td class="px-4 py-4">
                                    <div class="@(!notification.IsRead ? "font-semibold" : "") text-text-primary text-sm">
                                        @if (!string.IsNullOrEmpty(notification.LinkUrl))
                                        {
                                            <a href="@notification.LinkUrl" class="hover:text-accent-blue transition-colors">@notification.Title</a>
                                        }
                                        else
                                        {
                                            @notification.Title
                                        }
                                    </div>
                                    <div class="text-xs text-text-secondary mt-1 truncate max-w-md" title="@notification.Message">
                                        @notification.Message
                                    </div>
                                </td>
                                <!-- Server -->
                                <td class="px-4 py-4 text-text-secondary text-sm hidden lg:table-cell">
                                    @if (notification.GuildId.HasValue)
                                    {
                                        <span class="preview-trigger" data-preview-type="guild" data-guild-id="@notification.GuildId">@notification.GuildName</span>
                                    }
                                    else
                                    {
                                        <span class="text-text-tertiary">-</span>
                                    }
                                </td>
                                <!-- Status -->
                                <td class="px-4 py-4">
                                    @if (notification.IsRead)
                                    {
                                        <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                                            Text = "Read",
                                            Variant = BadgeVariant.Default,
                                            Size = BadgeSize.Small
                                        })" />
                                    }
                                    else
                                    {
                                        <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                                            Text = "Unread",
                                            Variant = BadgeVariant.Blue,
                                            Size = BadgeSize.Small
                                        })" />
                                    }
                                </td>
                                <!-- Time -->
                                <td class="px-4 py-4 text-text-secondary text-sm whitespace-nowrap">
                                    <span data-utc="@notification.CreatedAtUtcIso" data-format="datetime">@notification.TimeAgo</span>
                                </td>
                                <!-- Actions -->
                                <td class="px-4 py-4">
                                    <div class="flex items-center gap-2">
                                        <button type="button"
                                                data-action="toggle-read"
                                                data-id="@notification.Id"
                                                data-is-read="@notification.IsRead.ToString().ToLower()"
                                                class="text-accent-blue hover:text-accent-blue-hover text-sm font-medium transition-colors"
                                                title="@(notification.IsRead ? "Mark as unread" : "Mark as read")">
                                            @(notification.IsRead ? "Mark Unread" : "Mark Read")
                                        </button>
                                        <button type="button"
                                                data-action="delete"
                                                data-id="@notification.Id"
                                                class="text-error hover:text-error/80 text-sm font-medium transition-colors"
                                                title="Delete notification">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center">
                                @{
                                    var hasFilters = Model.ViewModel.Filters.HasActiveFilters;
                                    var emptyTitle = hasFilters ? "No notifications found" : "No notifications yet";
                                    var emptyDesc = hasFilters ? "Try adjusting your search or filters" : "Notifications will appear here when you receive them";
                                }
                                <partial name="Shared/Components/_EmptyState" model="new EmptyStateViewModel {
                                    Type = EmptyStateType.NoResults,
                                    Title = emptyTitle,
                                    Description = emptyDesc
                                }" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Card Layout -->
    <div class="md:hidden space-y-4">
        @if (Model.ViewModel.Notifications.Any())
        {
            @foreach (var notification in Model.ViewModel.Notifications)
            {
                <div class="bg-bg-secondary border border-border-primary rounded-lg p-4 @(!notification.IsRead ? "border-l-4 border-l-accent-blue" : "")">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex items-center gap-2">
                            <input type="checkbox"
                                   class="notification-checkbox w-4 h-4 rounded border-border-primary bg-bg-primary text-accent-blue focus:ring-accent-blue cursor-pointer"
                                   value="@notification.Id" />
                            <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                                Text = notification.TypeDisplay,
                                Variant = GetTypeBadgeVariant(notification.Type),
                                Size = BadgeSize.Small
                            })" />
                        </div>
                        @if (notification.IsRead)
                        {
                            <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                                Text = "Read",
                                Variant = BadgeVariant.Default,
                                Size = BadgeSize.Small
                            })" />
                        }
                        else
                        {
                            <partial name="Shared/Components/_Badge" model="@(new BadgeViewModel {
                                Text = "Unread",
                                Variant = BadgeVariant.Blue,
                                Size = BadgeSize.Small
                            })" />
                        }
                    </div>

                    <div class="mb-2">
                        <div class="@(!notification.IsRead ? "font-semibold" : "") text-text-primary text-sm">
                            @if (!string.IsNullOrEmpty(notification.LinkUrl))
                            {
                                <a href="@notification.LinkUrl" class="hover:text-accent-blue transition-colors">@notification.Title</a>
                            }
                            else
                            {
                                @notification.Title
                            }
                        </div>
                        <p class="text-xs text-text-secondary mt-1">@notification.Message</p>
                    </div>

                    <div class="flex items-center justify-between text-xs text-text-tertiary">
                        <span data-utc="@notification.CreatedAtUtcIso" data-format="datetime">@notification.TimeAgo</span>
                        @if (notification.GuildName != null)
                        {
                            <span class="preview-trigger" data-preview-type="guild" data-guild-id="@notification.GuildId">@notification.GuildName</span>
                        }
                    </div>

                    <div class="mt-3 pt-3 border-t border-border-secondary flex items-center gap-4">
                        <button type="button"
                                data-action="toggle-read"
                                data-id="@notification.Id"
                                data-is-read="@notification.IsRead.ToString().ToLower()"
                                class="text-accent-blue hover:text-accent-blue-hover text-sm font-medium transition-colors">
                            @(notification.IsRead ? "Mark Unread" : "Mark Read")
                        </button>
                        <button type="button"
                                data-action="delete"
                                data-id="@notification.Id"
                                class="text-error hover:text-error/80 text-sm font-medium transition-colors">
                            Delete
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="bg-bg-secondary border border-border-primary rounded-lg p-8">
                @{
                    var hasFilters = Model.ViewModel.Filters.HasActiveFilters;
                    var emptyTitle = hasFilters ? "No notifications found" : "No notifications yet";
                    var emptyDesc = hasFilters ? "Try adjusting your search or filters" : "Notifications will appear here when you receive them";
                }
                <partial name="Shared/Components/_EmptyState" model="new EmptyStateViewModel {
                    Type = EmptyStateType.NoResults,
                    Title = emptyTitle,
                    Description = emptyDesc
                }" />
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.ViewModel.TotalPages > 1)
    {
        <div class="mt-6">
            @{
                var baseUrl = Url.Page(null, new {
                    Type = Model.Type.HasValue ? ((int)Model.Type.Value).ToString() : null,
                    IsRead = Model.IsRead,
                    Severity = Model.Severity.HasValue ? ((int)Model.Severity.Value).ToString() : null,
                    StartDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                    EndDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                    SearchTerm = Model.SearchTerm,
                    GuildId = Model.GuildId,
                    PageSize = Model.PageSize
                }) ?? string.Empty;
                var paginationModel = new PaginationViewModel {
                    CurrentPage = Model.ViewModel.CurrentPage,
                    TotalPages = Model.ViewModel.TotalPages,
                    TotalItems = Model.ViewModel.TotalCount,
                    PageSize = Model.ViewModel.PageSize,
                    BaseUrl = baseUrl,
                    Style = PaginationStyle.Full,
                    ShowPageSizeSelector = true,
                    ShowItemCount = true,
                    PageParameterName = "pageNumber"
                };
            }
            <partial name="Shared/Components/_Pagination" model="paginationModel" />
        </div>
    }

    <!-- Results Summary -->
    @if (Model.ViewModel.TotalCount > 0)
    {
        <div class="mt-4 text-sm text-text-secondary">
            Showing @startItem to @endItem of @Model.ViewModel.TotalCount notifications
        </div>
    }
</div>

@functions {
    private int CountActiveFilters()
    {
        int count = 0;
        if (Model.Type.HasValue) count++;
        if (Model.IsRead.HasValue) count++;
        if (Model.Severity.HasValue) count++;
        if (Model.StartDate.HasValue) count++;
        if (Model.EndDate.HasValue) count++;
        if (!string.IsNullOrWhiteSpace(Model.SearchTerm)) count++;
        if (Model.GuildId.HasValue) count++;
        return count;
    }

    private BadgeVariant GetTypeBadgeVariant(NotificationType type) => type switch
    {
        NotificationType.PerformanceAlert => BadgeVariant.Error,
        NotificationType.BotStatus => BadgeVariant.Blue,
        NotificationType.GuildEvent => BadgeVariant.Info,
        NotificationType.CommandError => BadgeVariant.Warning,
        _ => BadgeVariant.Default
    };

    private BadgeVariant GetSeverityBadgeVariant(AlertSeverity? severity) => severity switch
    {
        AlertSeverity.Critical => BadgeVariant.Error,
        AlertSeverity.Warning => BadgeVariant.Warning,
        AlertSeverity.Info => BadgeVariant.Info,
        _ => BadgeVariant.Default
    };
}

@section Scripts {
    <script src="~/js/notification-history.js" asp-append-version="true"></script>
    <script>
        function toggleFilterPanel() {
            const content = document.getElementById('filterContent');
            const chevron = document.getElementById('filterChevron');
            const toggle = document.getElementById('filterToggle');

            if (content.style.maxHeight === '0px') {
                content.style.maxHeight = '1000px';
                chevron.style.transform = 'rotate(0deg)';
                toggle.setAttribute('aria-expanded', 'true');
            } else {
                content.style.maxHeight = '0px';
                chevron.style.transform = 'rotate(-90deg)';
                toggle.setAttribute('aria-expanded', 'false');
            }
        }

        function setDatePreset(preset) {
            const today = new Date();
            const startDateInput = document.getElementById('StartDate');
            const endDateInput = document.getElementById('EndDate');

            let startDate = new Date();

            switch(preset) {
                case 'today':
                    startDate = today;
                    break;
                case '7days':
                    startDate.setDate(today.getDate() - 7);
                    break;
                case '30days':
                    startDate.setDate(today.getDate() - 30);
                    break;
            }

            startDateInput.value = startDate.toISOString().split('T')[0];
            endDateInput.value = today.toISOString().split('T')[0];

            // Submit the form
            document.getElementById('filterForm').submit();
        }
    </script>
