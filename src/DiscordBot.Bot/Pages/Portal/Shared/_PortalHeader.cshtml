@model DiscordBot.Bot.ViewModels.Portal.PortalHeaderViewModel

@{
    var soundboardUrl = $"/Portal/Soundboard/{Model.GuildId}";
    var ttsUrl = $"/Portal/TTS/{Model.GuildId}";
}

<style>
    /* Portal Header */
    .portal-header {
        background-color: #1a1d23;
        border-bottom: 1px solid #40444b;
    }

    .portal-header .header-content {
        max-width: 1600px;
        margin: 0 auto;
        padding: 1rem 1.5rem 0;
    }

    .header-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .bot-icon {
        width: 40px;
        height: 40px;
        background-color: #5865f2;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .bot-icon svg {
        width: 24px;
        height: 24px;
        color: white;
    }

    .header-text h1 {
        font-size: 1.125rem;
        font-weight: bold;
        color: #dbdee1;
        margin: 0;
    }

    .header-text p {
        font-size: 0.875rem;
        color: #949ba4;
        margin: 0;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .status-badge.online {
        background-color: rgba(87, 171, 90, 0.1);
        color: #57ab5a;
    }

    .status-badge.offline {
        background-color: rgba(168, 165, 163, 0.1);
        color: #949ba4;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: currentColor;
    }

    /* Navigation Tabs */
    .portal-nav {
        display: flex;
        gap: 0.5rem;
        border-bottom: 2px solid #2b2f35;
    }

    .portal-nav-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        color: #949ba4;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        border-bottom: 2px solid transparent;
        margin-bottom: -2px;
        transition: all 0.2s;
        position: relative;
    }

    .portal-nav-link:hover {
        color: #dbdee1;
        background-color: rgba(255, 255, 255, 0.05);
    }

    .portal-nav-link.active {
        color: #5865f2;
        border-bottom-color: #5865f2;
    }

    .portal-nav-link svg {
        width: 16px;
        height: 16px;
    }

    @@media (max-width: 640px) {
        .portal-header .header-content {
            padding: 1rem 1rem 0;
        }

        .header-top {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .portal-nav {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .portal-nav-link {
            white-space: nowrap;
        }
    }
</style>

<!-- Portal Header -->
<header class="portal-header">
    <div class="header-content">
        <!-- Top Section: Icon, Title, Status -->
        <div class="header-top">
            <div class="header-left">
                <div class="bot-icon">
                    <svg fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19.75 10.5a1.5 1.5 0 110-3 1.5 1.5 0 010 3zm-15.5 0a1.5 1.5 0 110-3 1.5 1.5 0 010 3z"/>
                        <path d="M20 7a8 8 0 00-8-8 8 8 0 00-8 8v9a3 3 0 003 3h10a3 3 0 003-3V7z"/>
                    </svg>
                </div>
                <div class="header-text">
                    <h1>@Model.GuildName Portal</h1>
                    <p>Member access for @Model.GuildName</p>
                </div>
            </div>
            <div class="status-badge @(Model.IsOnline ? "online" : "offline")">
                <span class="status-dot"></span>
                @(Model.IsOnline ? "Online" : "Offline")
            </div>
        </div>

        <!-- Navigation Tabs -->
        <nav class="portal-nav">
            <a href="@soundboardUrl" class="portal-nav-link @(Model.ActiveTab == "soundboard" ? "active" : "")">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 3v9.28c-.47-.17-.97-.28-1.5-.28C8.01 12 6 14.01 6 16.5S8.01 21 10.5 21c2.31 0 4.2-1.75 4.45-4H15V6h4V3h-7z"/>
                </svg>
                Soundboard
            </a>
            <a href="@ttsUrl" class="portal-nav-link @(Model.ActiveTab == "tts" ? "active" : "")">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2c-5.33 4.55-8 8.48-8 11.8 0 4.98 3.8 8.2 8 8.2s8-3.22 8-8.2c0-3.32-2.67-7.25-8-11.8zm0 18c-3.35 0-6-2.57-6-6.1 0-2.5 1.72-5.61 6-9.51 4.28 3.9 6 7.01 6 9.51 0 3.53-2.65 6.1-6 6.1z"/>
                </svg>
                Text-to-Speech
            </a>
        </nav>
    </div>
</header>
