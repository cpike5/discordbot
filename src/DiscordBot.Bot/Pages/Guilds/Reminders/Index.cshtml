@page "{guildId:long}"
@model DiscordBot.Bot.Pages.Guilds.Reminders.IndexModel
@using DiscordBot.Bot.ViewModels.Components
@using DiscordBot.Core.Enums
@{
    ViewData["Title"] = $"Reminders - {Model.ViewModel.GuildName}";
    Layout = "_GuildLayout";
}

<!-- Success Message -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6">
            <partial name="Shared/Components/_Alert" model="new AlertViewModel {
                Variant = AlertVariant.Success,
                Message = Model.SuccessMessage,
                IsDismissible = true
            }" />
        </div>
    }

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6">
            <partial name="Shared/Components/_Alert" model="new AlertViewModel {
                Variant = AlertVariant.Error,
                Message = Model.ErrorMessage,
                IsDismissible = true
            }" />
        </div>
    }

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 lg:gap-6 mb-6">
        <!-- Total Reminders -->
        <div class="bg-bg-secondary border border-border-primary rounded-lg p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-text-secondary">Total Reminders</p>
                    <p class="mt-2 text-3xl font-bold text-text-primary">@Model.ViewModel.Stats.TotalCount.ToString("N0")</p>
                    <p class="mt-1 text-xs text-text-tertiary">All-time</p>
                </div>
                <div class="p-3 bg-accent-blue/10 rounded-lg">
                    <svg class="w-6 h-6 text-accent-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Pending Reminders -->
        <div class="bg-bg-secondary border border-border-primary rounded-lg p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-text-secondary">Pending</p>
                    <p class="mt-2 text-3xl font-bold text-accent-blue">@Model.ViewModel.Stats.PendingCount.ToString("N0")</p>
                    <p class="mt-1 text-xs text-text-tertiary">Awaiting delivery</p>
                </div>
                <div class="p-3 bg-accent-blue/10 rounded-lg">
                    <svg class="w-6 h-6 text-accent-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Delivered Today -->
        <div class="bg-bg-secondary border border-border-primary rounded-lg p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-text-secondary">Delivered Today</p>
                    <p class="mt-2 text-3xl font-bold text-success">@Model.ViewModel.Stats.DeliveredTodayCount.ToString("N0")</p>
                    <p class="mt-1 text-xs text-text-tertiary">Successfully sent</p>
                </div>
                <div class="p-3 bg-success/10 rounded-lg">
                    <svg class="w-6 h-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Failed -->
        <div class="bg-bg-secondary border border-border-primary rounded-lg p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-text-secondary">Failed</p>
                    @{
                        var failedColor = Model.ViewModel.Stats.FailedCount > 0 ? "text-error" : "text-text-primary";
                    }
                    <p class="mt-2 text-3xl font-bold @failedColor">@Model.ViewModel.Stats.FailedCount.ToString("N0")</p>
                    <p class="mt-1 text-xs text-text-tertiary">Needs attention</p>
                </div>
                <div class="p-3 @(Model.ViewModel.Stats.FailedCount > 0 ? "bg-error/10" : "bg-bg-tertiary") rounded-lg">
                    <svg class="w-6 h-6 @(Model.ViewModel.Stats.FailedCount > 0 ? "text-error" : "text-text-tertiary")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-bg-secondary border border-border-primary rounded-lg p-4 mb-6">
        <form method="get" class="flex flex-col sm:flex-row gap-4">
            <input type="hidden" name="guildId" value="@Model.ViewModel.GuildId" />

            <!-- Status Filter -->
            <div class="flex-1">
                <label for="status" class="block text-sm font-medium text-text-secondary mb-1">Status</label>
                <select id="status" name="status"
                        class="w-full px-3 py-2 bg-bg-primary border border-border-primary rounded-md text-text-primary focus:outline-none focus:ring-2 focus:ring-accent-blue"
                        onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    <option value="@((int)ReminderStatus.Pending)" selected="@(Model.Status == ReminderStatus.Pending)">Pending</option>
                    <option value="@((int)ReminderStatus.Delivered)" selected="@(Model.Status == ReminderStatus.Delivered)">Delivered</option>
                    <option value="@((int)ReminderStatus.Failed)" selected="@(Model.Status == ReminderStatus.Failed)">Failed</option>
                    <option value="@((int)ReminderStatus.Cancelled)" selected="@(Model.Status == ReminderStatus.Cancelled)">Cancelled</option>
                </select>
            </div>

            <!-- Clear Filters -->
            @if (Model.Status.HasValue)
            {
                <div class="flex items-end">
                    <a asp-page="Index" asp-route-guildId="@Model.ViewModel.GuildId"
                       class="px-4 py-2 text-sm font-medium text-text-secondary hover:text-text-primary transition-colors">
                        Clear Filters
                    </a>
                </div>
            }
        </form>
    </div>

    <!-- Reminders Table -->
    @if (Model.ViewModel.TotalCount > 0)
    {
        <div class="bg-bg-secondary border border-border-primary rounded-lg overflow-hidden">
            <div class="table-container overflow-x-auto">
                <table class="w-full min-w-[900px]">
                    <thead class="bg-bg-tertiary border-b border-border-primary">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                User
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Message
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Trigger Time
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Created
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Status
                            </th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border-primary">
                        @foreach (var reminder in Model.ViewModel.Reminders)
                        {
                            <tr class="table-row hover:bg-bg-hover transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrEmpty(reminder.AvatarUrl))
                                        {
                                            <img src="@reminder.AvatarUrl" alt="" class="w-8 h-8 rounded-full" />
                                        }
                                        else
                                        {
                                            <div class="w-8 h-8 rounded-full bg-bg-tertiary flex items-center justify-center">
                                                <svg class="w-4 h-4 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                </svg>
                                            </div>
                                        }
                                        <span class="preview-trigger text-sm text-text-primary" data-preview-type="user" data-user-id="@reminder.UserId" data-context-guild-id="@Model.ViewModel.GuildId">@reminder.Username</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-text-secondary max-w-[250px] truncate block" title="@reminder.Message">
                                        @reminder.MessagePreview
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-text-primary" data-utc="@reminder.TriggerAtUtcIso" data-format="datetime-short"></span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-text-secondary" data-utc="@reminder.CreatedAtUtcIso" data-format="datetime-short"></span>
                                </td>
                                <td class="px-6 py-4">
                                    @{
                                        var statusClass = reminder.Status switch
                                        {
                                            ReminderStatus.Pending => "bg-accent-blue/20 text-accent-blue",
                                            ReminderStatus.Delivered => "bg-success/20 text-success",
                                            ReminderStatus.Failed => "bg-error/20 text-error",
                                            ReminderStatus.Cancelled => "bg-bg-tertiary text-text-secondary",
                                            _ => "bg-bg-tertiary text-text-tertiary"
                                        };
                                        var dotClass = reminder.Status switch
                                        {
                                            ReminderStatus.Pending => "bg-accent-blue",
                                            ReminderStatus.Delivered => "bg-success",
                                            ReminderStatus.Failed => "bg-error",
                                            ReminderStatus.Cancelled => "bg-text-secondary",
                                            _ => "bg-text-tertiary"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold @statusClass">
                                        <span class="w-1.5 h-1.5 rounded-full @dotClass mr-1.5"></span>
                                        @reminder.StatusText
                                    </span>
                                    @if (reminder.Status == ReminderStatus.Failed && !string.IsNullOrEmpty(reminder.LastError))
                                    {
                                        <span class="ml-2 cursor-help" title="@reminder.LastError">
                                            <svg class="w-4 h-4 text-error inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-end gap-1 row-actions">
                                        @if (reminder.CanCancel)
                                        {
                                            <button
                                                type="button"
                                                onclick="showCancelModal('@reminder.Id', '@reminder.Username')"
                                                class="p-2 text-text-secondary hover:text-error hover:bg-error/10 rounded-md transition-colors"
                                                title="Cancel Reminder">
                                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                </svg>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.ViewModel.TotalPages > 1)
            {
                <div class="px-6 py-4 border-t border-border-primary flex flex-col sm:flex-row items-center justify-between gap-4">
                    @{
                        var firstItem = (Model.ViewModel.CurrentPage - 1) * Model.ViewModel.PageSize + 1;
                        var lastItem = Math.Min(Model.ViewModel.CurrentPage * Model.ViewModel.PageSize, Model.ViewModel.TotalCount);
                    }
                    <p class="text-sm text-text-secondary">
                        Showing <span class="font-medium text-text-primary">@firstItem</span> to
                        <span class="font-medium text-text-primary">@lastItem</span> of
                        <span class="font-medium text-text-primary">@Model.ViewModel.TotalCount</span> reminders
                    </p>
                    <div class="flex items-center gap-1">
                        @if (Model.ViewModel.HasPreviousPage)
                        {
                            <a asp-page="Index"
                               asp-route-guildId="@Model.ViewModel.GuildId"
                               asp-route-page="@(Model.ViewModel.CurrentPage - 1)"
                               asp-route-status="@Model.Status"
                               class="px-3 py-1.5 text-sm text-text-primary bg-bg-tertiary border border-border-primary rounded-md hover:bg-bg-hover transition-colors">
                                Previous
                            </a>
                        }
                        else
                        {
                            <button class="px-3 py-1.5 text-sm text-text-tertiary bg-bg-tertiary border border-border-primary rounded-md cursor-not-allowed" disabled>
                                Previous
                            </button>
                        }

                        <span class="px-3 py-1.5 text-sm text-white bg-accent-orange rounded-md">
                            @Model.ViewModel.CurrentPage
                        </span>

                        @if (Model.ViewModel.HasNextPage)
                        {
                            <a asp-page="Index"
                               asp-route-guildId="@Model.ViewModel.GuildId"
                               asp-route-page="@(Model.ViewModel.CurrentPage + 1)"
                               asp-route-status="@Model.Status"
                               class="px-3 py-1.5 text-sm text-text-primary bg-bg-tertiary border border-border-primary rounded-md hover:bg-bg-hover transition-colors">
                                Next
                            </a>
                        }
                        else
                        {
                            <button class="px-3 py-1.5 text-sm text-text-tertiary bg-bg-tertiary border border-border-primary rounded-md cursor-not-allowed" disabled>
                                Next
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="bg-bg-secondary border border-border-primary rounded-lg p-8">
            @{
                var emptyTitle = Model.Status.HasValue ? "No Reminders Match Filter" : "No Reminders Yet";
                var emptyDescription = Model.Status.HasValue
                    ? "No reminders match the selected status filter. Try adjusting your filters."
                    : "No reminders have been created in this server. Users can create reminders using the /remind command in Discord.";
            }
            <partial name="Shared/Components/_EmptyState" model='new EmptyStateViewModel {
                Type = Model.Status.HasValue ? EmptyStateType.NoResults : EmptyStateType.FirstTime,
                Title = emptyTitle,
                Description = emptyDescription,
                Size = EmptyStateSize.Default,
                IconSvgPath = "M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
            }' />
        </div>
    }

<!-- Cancel Confirmation Modal -->
<div id="cancel-modal" class="hidden fixed inset-0 z-50" role="alertdialog" aria-modal="true" aria-labelledby="modal-title">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm" onclick="hideCancelModal()" aria-hidden="true"></div>
    <!-- Modal Dialog -->
    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-bg-tertiary border border-border-primary rounded-lg shadow-xl max-w-md w-full" role="document">
            <!-- Modal Content -->
            <div class="p-6">
                <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 w-10 h-10 rounded-full bg-warning/20 flex items-center justify-center">
                        <svg class="w-5 h-5 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <div class="flex-1">
                        <h3 id="modal-title" class="text-lg font-semibold text-text-primary">Cancel Reminder</h3>
                        <p class="mt-2 text-sm text-text-secondary">
                            Are you sure you want to cancel the reminder for <span id="cancel-username" class="font-medium text-text-primary"></span>? This action cannot be undone.
                        </p>
                    </div>
                </div>
            </div>
            <!-- Modal Footer -->
            <div class="flex justify-end gap-3 px-6 py-4 bg-bg-secondary border-t border-border-primary rounded-b-lg">
                <button type="button" onclick="hideCancelModal()"
                        class="px-4 py-2 bg-bg-tertiary hover:bg-bg-hover border border-border-primary text-text-primary font-medium text-sm rounded-md transition-colors">
                    Keep Reminder
                </button>
                <form id="cancel-form" method="post" asp-page="Index" asp-page-handler="Cancel" asp-route-guildId="@Model.ViewModel.GuildId" class="inline-block">
                    <input type="hidden" id="cancel-reminder-id" name="reminderId" value="" />
                    <button type="submit"
                            class="px-4 py-2 bg-error hover:bg-red-600 active:bg-red-700 text-white font-medium text-sm rounded-md transition-colors">
                        Cancel Reminder
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table-row .row-actions {
            opacity: 0;
            transition: opacity 0.15s ease-in-out;
        }
        .table-row:hover .row-actions {
            opacity: 1;
        }
        .table-container {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }
    </style>

    <script>
        function showCancelModal(reminderId, username) {
            document.getElementById('cancel-reminder-id').value = reminderId;
            document.getElementById('cancel-username').textContent = username;
            document.getElementById('cancel-modal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function hideCancelModal() {
            document.getElementById('cancel-modal').classList.add('hidden');
            document.body.style.overflow = '';
        }

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                if (!document.getElementById('cancel-modal').classList.contains('hidden')) {
                    hideCancelModal();
                }
            }
        });
    </script>
}
