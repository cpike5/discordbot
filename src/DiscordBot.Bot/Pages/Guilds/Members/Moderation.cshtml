@page "/Guilds/{guildId:long}/Members/{userId:long}/Moderation"
@model DiscordBot.Bot.Pages.Guilds.Members.ModerationModel
@using DiscordBot.Core.Enums
@{
    ViewData["Title"] = $"{Model.ViewModel.DisplayName} - Moderation";
}

@section Styles {
    <link rel="stylesheet" href="~/css/moderation.css" asp-append-version="true" />
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb Navigation -->
    <nav class="text-sm text-text-secondary mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2">
            <li><a asp-page="/Guilds/Index" class="hover:text-text-primary transition-colors">Servers</a></li>
            <li aria-hidden="true">
                <svg class="w-4 h-4 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </li>
            <li><a asp-page="/Guilds/Details" asp-route-id="@Model.GuildId" class="hover:text-text-primary transition-colors">@Model.ViewModel.GuildName</a></li>
            <li aria-hidden="true">
                <svg class="w-4 h-4 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </li>
            <li><a asp-page="/Guilds/Members/Index" asp-route-guildId="@Model.GuildId" class="hover:text-text-primary transition-colors">Members</a></li>
            <li aria-hidden="true">
                <svg class="w-4 h-4 text-text-tertiary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </li>
            <li class="text-text-primary font-medium" aria-current="page">@Model.ViewModel.DisplayName - Moderation</li>
        </ol>
    </nav>

    <!-- User Header -->
    <div class="bg-bg-secondary border border-border-primary rounded-lg p-6 mb-6">
        <div class="flex flex-col md:flex-row md:items-start gap-6">
            <!-- Avatar and Basic Info -->
            <div class="flex items-start gap-4 flex-1">
                @if (!string.IsNullOrEmpty(Model.ViewModel.AvatarUrl))
                {
                    <img src="@Model.ViewModel.AvatarUrl" alt="@Model.ViewModel.DisplayName" class="w-20 h-20 rounded-full flex-shrink-0" />
                }
                else
                {
                    <div class="w-20 h-20 rounded-full bg-gradient-to-br from-accent-blue to-accent-orange flex items-center justify-center text-white font-bold text-xl flex-shrink-0">
                        @(Model.ViewModel.DisplayName.Length >= 2 ? Model.ViewModel.DisplayName[..2].ToUpper() : Model.ViewModel.DisplayName.ToUpper())
                    </div>
                }
                <div class="flex-1 min-w-0">
                    <div class="flex flex-wrap items-center gap-2 mb-2">
                        <h1 class="text-2xl font-bold text-text-primary">@Model.ViewModel.DisplayName</h1>
                        <span class="text-sm text-text-tertiary font-mono">@@@Model.ViewModel.Username</span>
                    </div>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                        <div>
                            <span class="text-text-tertiary block">Account Created</span>
                            <p class="text-text-secondary" data-utc="@Model.ViewModel.AccountCreatedAt.ToString("o")" data-format="date"></p>
                        </div>
                        <div>
                            <span class="text-text-tertiary block">Joined Server</span>
                            @if (Model.ViewModel.JoinedGuildAt.HasValue)
                            {
                                <p class="text-text-secondary" data-utc="@Model.ViewModel.JoinedGuildAt.Value.ToString("o")" data-format="date"></p>
                            }
                            else
                            {
                                <p class="text-text-secondary">Unknown</p>
                            }
                        </div>
                        <div>
                            <span class="text-text-tertiary block">User ID</span>
                            <p class="text-text-secondary font-mono">@Model.UserId</p>
                        </div>
                        <div>
                            <span class="text-text-tertiary block">Server Roles</span>
                            <p class="text-text-secondary">@(Model.ViewModel.Roles.Any() ? string.Join(", ", Model.ViewModel.Roles) : "None")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tags Section -->
    <div class="bg-bg-secondary border border-border-primary rounded-lg p-6 mb-6">
        <h2 class="text-lg font-semibold text-text-primary mb-4">User Tags</h2>
        <div class="flex flex-wrap items-center gap-2" id="userTagsContainer">
            @foreach (var tag in Model.ViewModel.Tags)
            {
                <span class="user-tag user-tag-removable user-tag-@tag.TagCategory.ToString().ToLower()" data-tag-name="@tag.TagName" onclick="removeTag('@tag.TagName')">
                    @tag.TagName
                    <span class="user-tag-remove" title="Remove tag">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </span>
                </span>
            }
            <!-- Add Tag Dropdown -->
            <div class="relative" id="addTagDropdownContainer">
                <button type="button" id="addTagBtn" class="user-tag hover:border-accent-blue hover:text-accent-blue transition-colors" onclick="toggleTagDropdown()">
                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Tag
                </button>
                <div id="tagDropdown" class="hidden absolute top-full left-0 mt-1 w-48 bg-bg-tertiary border border-border-primary rounded-lg shadow-lg overflow-hidden z-10">
                    @if (Model.ViewModel.AvailableTags.Any())
                    {
                        @foreach (var tag in Model.ViewModel.AvailableTags.Where(t => !Model.ViewModel.Tags.Any(ut => ut.TagName == t.Name)))
                        {
                            <button type="button" class="w-full px-3 py-2 text-sm text-left text-text-primary hover:bg-bg-hover transition-colors" onclick="addTag('@tag.Name')">
                                <span class="user-tag user-tag-@tag.Category.ToString().ToLower()">@tag.Name</span>
                            </button>
                        }
                    }
                    else
                    {
                        <div class="px-3 py-4 text-center text-sm text-text-tertiary">
                            No tags available
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Tab Navigation -->
    <div class="settings-tabs mb-6" role="tablist" aria-label="User moderation sections">
        <button type="button" class="settings-tab settings-tab-active" id="tab-btn-cases" role="tab" aria-selected="true" aria-controls="tab-cases" data-tab="cases" onclick="switchTab('cases')">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Cases
            <span class="inline-flex items-center justify-center px-2 py-0.5 rounded-full text-xs font-medium bg-error text-white">@Model.ViewModel.Cases.Count</span>
        </button>
        <button type="button" class="settings-tab" id="tab-btn-notes" role="tab" aria-selected="false" aria-controls="tab-notes" data-tab="notes" onclick="switchTab('notes')">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Notes
            <span class="inline-flex items-center justify-center px-2 py-0.5 rounded-full text-xs font-medium bg-accent-blue text-white">@Model.ViewModel.Notes.Count</span>
        </button>
        <button type="button" class="settings-tab" id="tab-btn-flags" role="tab" aria-selected="false" aria-controls="tab-flags" data-tab="flags" onclick="switchTab('flags')">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
            </svg>
            Flags
            <span class="inline-flex items-center justify-center px-2 py-0.5 rounded-full text-xs font-medium bg-warning text-white">@Model.ViewModel.FlaggedEvents.Count</span>
        </button>
    </div>

    <!-- Tab Content -->
    <div class="bg-bg-secondary border border-border-primary rounded-lg">
        <!-- Cases Tab -->
        <div id="tab-cases" class="tab-content" role="tabpanel" aria-labelledby="tab-btn-cases">
            <div class="overflow-x-auto">
                <table class="w-full" role="table" aria-label="Moderation cases">
                    <thead class="bg-bg-tertiary">
                        <tr>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Case</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Action</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Reason</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Moderator</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Date</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border-primary">
                        @if (Model.ViewModel.Cases.Any())
                        {
                            @foreach (var moderationCase in Model.ViewModel.Cases)
                            {
                                var badgeClass = moderationCase.Type switch
                                {
                                    CaseType.Warn => "bg-warning-bg text-warning border border-warning-border",
                                    CaseType.Mute => "bg-info-bg text-info border border-info-border",
                                    CaseType.Kick => "bg-error-bg text-error border border-error-border",
                                    CaseType.Ban => "bg-error-bg text-error border border-error-border",
                                    _ => "bg-bg-tertiary text-text-secondary border border-border-primary"
                                };
                                <tr class="hover:bg-bg-hover/50 transition-colors">
                                    <td class="px-6 py-4 text-sm font-medium text-text-primary">#@moderationCase.CaseNumber</td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium @badgeClass">
                                            @moderationCase.Type.ToString()
                                            @if (moderationCase.Duration.HasValue)
                                            {
                                                <text> (@FormatDuration(moderationCase.Duration.Value))</text>
                                            }
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-text-secondary">@(moderationCase.Reason ?? "No reason provided")</td>
                                    <td class="px-6 py-4 text-sm text-text-secondary">@moderationCase.ModeratorUsername</td>
                                    <td class="px-6 py-4 text-sm text-text-tertiary" data-utc="@moderationCase.CreatedAt.ToString("o")" data-format="date"></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center text-sm text-text-tertiary">
                                    No moderation cases found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="p-4 border-t border-border-primary text-sm text-text-tertiary">
                Showing @Model.ViewModel.Cases.Count moderation case@(Model.ViewModel.Cases.Count == 1 ? "" : "s")
            </div>
        </div>

        <!-- Notes Tab -->
        <div id="tab-notes" class="tab-content hidden p-6" role="tabpanel" aria-labelledby="tab-btn-notes">
            <!-- Add Note Form -->
            <div class="mb-6">
                <h3 class="text-sm font-semibold text-text-primary mb-2">Add New Note</h3>
                <div class="flex gap-3">
                    <textarea id="newNoteText" rows="2" placeholder="Add a note about this user..." class="flex-1 px-3 py-2 text-sm bg-bg-primary border border-border-primary rounded-lg text-text-primary placeholder-text-tertiary focus:border-border-focus focus:ring-1 focus:ring-border-focus transition-colors resize-none"></textarea>
                    <button type="button" class="self-end px-4 py-2 text-sm font-medium text-white bg-accent-orange rounded-lg hover:bg-accent-orange-hover transition-colors" onclick="addNote()">
                        Add Note
                    </button>
                </div>
            </div>

            <!-- Notes List -->
            <div class="space-y-4" id="notesListContainer">
                @if (Model.ViewModel.Notes.Any())
                {
                    @foreach (var note in Model.ViewModel.Notes.OrderByDescending(n => n.CreatedAt))
                    {
                        <div class="note-item" data-note-id="@note.Id">
                            <div class="note-meta">
                                <span class="font-medium text-text-secondary">@note.AuthorUsername</span>
                                <span>-</span>
                                <span data-utc="@note.CreatedAt.ToString("o")" data-format="datetime"></span>
                                @if (note.AuthorUserId == Model.ViewModel.CurrentUserId)
                                {
                                    <button type="button" class="ml-auto text-error hover:text-error-hover text-xs" onclick="deleteNote('@note.Id')">Delete</button>
                                }
                            </div>
                            <p class="note-content">@note.Content</p>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-8 text-sm text-text-tertiary">
                        No notes yet
                    </div>
                }
            </div>
        </div>

        <!-- Flags Tab -->
        <div id="tab-flags" class="tab-content hidden" role="tabpanel" aria-labelledby="tab-btn-flags">
            <div class="overflow-x-auto">
                <table class="w-full" role="table" aria-label="Flagged events">
                    <thead class="bg-bg-tertiary">
                        <tr>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Severity</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Rule</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Channel</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Status</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-text-primary uppercase tracking-wider">Date</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border-primary">
                        @if (Model.ViewModel.FlaggedEvents.Any())
                        {
                            @foreach (var flag in Model.ViewModel.FlaggedEvents.OrderByDescending(f => f.CreatedAt))
                            {
                                var severityClass = flag.Severity switch
                                {
                                    Severity.Low => "severity-low",
                                    Severity.Medium => "severity-medium",
                                    Severity.High => "severity-high",
                                    Severity.Critical => "severity-critical",
                                    _ => "severity-low"
                                };
                                var statusClass = flag.Status switch
                                {
                                    FlaggedEventStatus.Pending => "status-pending",
                                    FlaggedEventStatus.Dismissed => "status-dismissed",
                                    FlaggedEventStatus.Actioned => "status-actioned",
                                    _ => "status-pending"
                                };
                                var ruleClass = flag.RuleType switch
                                {
                                    RuleType.Spam => "rule-spam",
                                    RuleType.Content => "rule-content",
                                    RuleType.Raid => "rule-raid",
                                    _ => "rule-spam"
                                };
                                <tr class="hover:bg-bg-hover/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <span class="severity-badge @severityClass">@flag.Severity.ToString()</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <span class="rule-icon @ruleClass">
                                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    @if (flag.RuleType == RuleType.Spam)
                                                    {
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                                    }
                                                    else if (flag.RuleType == RuleType.Content)
                                                    {
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.618 5.984A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016zM12 9v2m0 4h.01" />
                                                    }
                                                    else
                                                    {
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                                    }
                                                </svg>
                                            </span>
                                            <span class="text-sm text-text-secondary">@flag.RuleType.ToString()</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-text-secondary">@(flag.ChannelName ?? "N/A")</td>
                                    <td class="px-6 py-4">
                                        <span class="status-badge @statusClass">@flag.Status.ToString()</span>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-text-tertiary" data-utc="@flag.CreatedAt.ToString("o")" data-format="relative"></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center text-sm text-text-tertiary">
                                    No flagged events found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="p-4 border-t border-border-primary text-sm text-text-tertiary">
                Showing @Model.ViewModel.FlaggedEvents.Count flagged event@(Model.ViewModel.FlaggedEvents.Count == 1 ? "" : "s")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user-moderation-profile.js"></script>
    <script>
        // Initialize page with guild/user IDs as strings to preserve precision
        window.moderationGuildId = '@Model.GuildId';
        window.moderationUserId = '@Model.UserId';
        window.currentUserId = '@Model.ViewModel.CurrentUserId';
    </script>
}

@functions {
    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalDays >= 1)
            return $"{(int)duration.TotalDays}d";
        if (duration.TotalHours >= 1)
            return $"{(int)duration.TotalHours}h";
        if (duration.TotalMinutes >= 1)
            return $"{(int)duration.TotalMinutes}m";
        return $"{(int)duration.TotalSeconds}s";
    }
}
