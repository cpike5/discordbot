@page
@model LinkDiscordModel
@{
    ViewData["Title"] = "Link Discord Account";
}

<!-- Page Header -->
<div class="mb-8">
    <h1 class="text-3xl font-bold text-text-primary mb-2">Discord Account</h1>
    <p class="text-text-secondary">Link your Discord account for seamless authentication and guild management</p>
</div>

<!-- Status Message -->
@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="mb-6 p-4 rounded-lg flex items-start gap-3 @(Model.IsSuccess ? "bg-success-bg border border-success-border" : "bg-error-bg border border-error-border")" role="alert">
        @if (Model.IsSuccess)
        {
            <!-- Success Icon -->
            <svg class="w-5 h-5 text-success flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
        }
        else
        {
            <!-- Error Icon -->
            <svg class="w-5 h-5 text-error flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
        }
        <div>
            <p class="text-sm font-semibold @(Model.IsSuccess ? "text-success" : "text-error")">
                @(Model.IsSuccess ? "Success" : "Error")
            </p>
            <p class="text-sm @(Model.IsSuccess ? "text-success" : "text-error") mt-1">
                @Model.StatusMessage
            </p>
        </div>
    </div>
}

<!-- Discord Link Card -->
<div class="bg-bg-secondary border border-border-primary rounded-lg p-6 shadow-lg">

    @if (!Model.IsDiscordOAuthConfigured)
    {
        <!-- OAuth Not Configured -->
        <div class="text-center py-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-warning-bg border-2 border-warning-border rounded-full mb-4">
                <svg class="w-8 h-8 text-warning" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </div>
            <h2 class="text-xl font-semibold text-text-primary mb-2">Discord OAuth Not Configured</h2>
            <p class="text-text-secondary text-sm max-w-md mx-auto">
                Discord OAuth authentication is not configured on this server. Please contact your administrator to enable Discord login functionality.
            </p>
        </div>
    }
    else if (Model.IsDiscordLinked)
    {
        <!-- Discord Account Linked -->
        <div>
            <div class="flex items-start gap-4 mb-6 pb-6 border-b border-border-primary">
                <!-- Discord Avatar -->
                @if (!string.IsNullOrEmpty(Model.DiscordAvatarUrl))
                {
                    <img src="@Model.DiscordAvatarUrl" alt="Discord Avatar" class="w-16 h-16 rounded-full border-2 border-accent-blue" />
                }
                else
                {
                    <!-- Default Avatar -->
                    <div class="w-16 h-16 rounded-full bg-bg-tertiary border-2 border-border-primary flex items-center justify-center">
                        <svg class="w-8 h-8 text-text-tertiary" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M20.317 4.492c-1.53-.69-3.17-1.2-4.885-1.49a.075.075 0 0 0-.079.036c-.21.369-.444.85-.608 1.23a18.566 18.566 0 0 0-5.487 0 12.36 12.36 0 0 0-.617-1.23A.077.077 0 0 0 8.562 3c-1.714.29-3.354.8-4.885 1.491a.07.07 0 0 0-.032.027C.533 9.093-.32 13.555.099 17.961a.08.08 0 0 0 .031.055 20.03 20.03 0 0 0 5.993 2.98.078.078 0 0 0 .084-.026 13.83 13.83 0 0 0 1.226-1.963.074.074 0 0 0-.041-.104 13.201 13.201 0 0 1-1.872-.878.075.075 0 0 1-.008-.125c.126-.093.252-.19.372-.287a.075.075 0 0 1 .078-.01c3.927 1.764 8.18 1.764 12.061 0a.075.075 0 0 1 .079.009c.12.098.245.195.372.288a.075.075 0 0 1-.006.125c-.598.344-1.22.635-1.873.877a.075.075 0 0 0-.041.105c.36.687.772 1.341 1.225 1.962a.077.077 0 0 0 .084.028 19.963 19.963 0 0 0 6.002-2.981.076.076 0 0 0 .032-.054c.5-5.094-.838-9.52-3.549-13.442a.06.06 0 0 0-.031-.028zM8.02 15.278c-1.182 0-2.157-1.069-2.157-2.38 0-1.312.956-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.956 2.38-2.157 2.38zm7.975 0c-1.183 0-2.157-1.069-2.157-2.38 0-1.312.955-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.946 2.38-2.157 2.38z" />
                        </svg>
                    </div>
                }

                <!-- Discord Info -->
                <div class="flex-1">
                    <div class="flex items-center gap-2 mb-1">
                        <h2 class="text-xl font-semibold text-text-primary">@(Model.DiscordUsername ?? "Discord User")</h2>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-success-bg text-success border border-success-border">
                            Linked
                        </span>
                    </div>
                    @if (Model.DiscordUserId.HasValue)
                    {
                        <p class="text-sm text-text-secondary font-mono">ID: @Model.DiscordUserId.Value</p>
                    }
                    @if (Model.HasValidToken)
                    {
                        <p class="text-xs text-success mt-1 flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            OAuth token active
                        </p>
                    }
                    else
                    {
                        <p class="text-xs text-warning mt-1 flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            OAuth token expired - re-link to refresh
                        </p>
                    }
                </div>
            </div>

            <!-- Guild List -->
            @if (Model.HasValidToken && Model.UserGuilds.Any())
            {
                <div class="mb-6">
                    <h3 class="text-sm font-semibold text-text-primary mb-3">Your Administered Guilds (@Model.UserGuilds.Count)</h3>
                    <div class="space-y-2">
                        @foreach (var guild in Model.UserGuilds)
                        {
                            <div class="flex items-center gap-3 p-3 bg-bg-primary rounded-md border border-border-secondary hover:border-border-primary transition-colors">
                                @if (!string.IsNullOrEmpty(guild.IconUrl))
                                {
                                    <img src="@guild.IconUrl" alt="@guild.Name icon" class="w-10 h-10 rounded-full flex-shrink-0" />
                                }
                                else
                                {
                                    <!-- Default Guild Icon -->
                                    <div class="w-10 h-10 rounded-full bg-bg-tertiary flex items-center justify-center flex-shrink-0">
                                        <span class="text-text-secondary text-sm font-semibold">@guild.Name.Substring(0, Math.Min(2, guild.Name.Length)).ToUpper()</span>
                                    </div>
                                }
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-text-primary truncate">@guild.Name</p>
                                    <p class="text-xs text-text-tertiary font-mono">ID: @guild.Id</p>
                                </div>
                                @if (guild.Owner)
                                {
                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-accent-orange-muted text-accent-orange border border-accent-orange/30 flex-shrink-0">
                                        Owner
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-accent-blue-muted text-accent-blue border border-accent-blue/30 flex-shrink-0">
                                        Admin
                                    </span>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.HasValidToken && !Model.UserGuilds.Any())
            {
                <div class="mb-6 p-4 bg-info-bg border border-info-border rounded-md">
                    <p class="text-sm text-info">
                        You are not an administrator in any Discord servers. You need Administrator or Manage Server permissions to manage guilds through this admin panel.
                    </p>
                </div>
            }

            <!-- Unlink Button -->
            <div class="flex items-center justify-between pt-4 border-t border-border-primary">
                <div>
                    <p class="text-sm font-medium text-text-primary">Unlink Discord Account</p>
                    <p class="text-xs text-text-tertiary mt-0.5">This will remove the Discord connection and clear all associated data</p>
                </div>
                <form method="post" asp-page-handler="Unlink" onsubmit="return confirm('Are you sure you want to unlink your Discord account? This will remove guild management access.');">
                    <button
                        type="submit"
                        class="py-2 px-4 text-sm font-semibold text-white bg-error border border-error rounded-md transition-colors hover:bg-error-hover focus:outline-none focus-visible:ring-2 focus-visible:ring-error focus-visible:ring-offset-2 focus-visible:ring-offset-bg-secondary">
                        Unlink Discord
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <!-- Discord Not Linked -->
        <div class="text-center py-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-bg-tertiary rounded-xl mb-4">
                <svg class="w-10 h-10 text-text-secondary" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.317 4.492c-1.53-.69-3.17-1.2-4.885-1.49a.075.075 0 0 0-.079.036c-.21.369-.444.85-.608 1.23a18.566 18.566 0 0 0-5.487 0 12.36 12.36 0 0 0-.617-1.23A.077.077 0 0 0 8.562 3c-1.714.29-3.354.8-4.885 1.491a.07.07 0 0 0-.032.027C.533 9.093-.32 13.555.099 17.961a.08.08 0 0 0 .031.055 20.03 20.03 0 0 0 5.993 2.98.078.078 0 0 0 .084-.026 13.83 13.83 0 0 0 1.226-1.963.074.074 0 0 0-.041-.104 13.201 13.201 0 0 1-1.872-.878.075.075 0 0 1-.008-.125c.126-.093.252-.19.372-.287a.075.075 0 0 1 .078-.01c3.927 1.764 8.18 1.764 12.061 0a.075.075 0 0 1 .079.009c.12.098.245.195.372.288a.075.075 0 0 1-.006.125c-.598.344-1.22.635-1.873.877a.075.075 0 0 0-.041.105c.36.687.772 1.341 1.225 1.962a.077.077 0 0 0 .084.028 19.963 19.963 0 0 0 6.002-2.981.076.076 0 0 0 .032-.054c.5-5.094-.838-9.52-3.549-13.442a.06.06 0 0 0-.031-.028zM8.02 15.278c-1.182 0-2.157-1.069-2.157-2.38 0-1.312.956-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.956 2.38-2.157 2.38zm7.975 0c-1.183 0-2.157-1.069-2.157-2.38 0-1.312.955-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.946 2.38-2.157 2.38z" />
                </svg>
            </div>
            <h2 class="text-xl font-semibold text-text-primary mb-2">No Discord Account Linked</h2>
            <p class="text-text-secondary text-sm mb-6 max-w-md mx-auto">
                Link your Discord account to enable seamless authentication and access guild management features.
            </p>

            <!-- Link Discord Button -->
            <form method="post" asp-page-handler="Link">
                <button
                    type="submit"
                    class="inline-flex items-center justify-center gap-2.5 py-2.5 px-6 text-sm font-semibold text-white bg-discord border border-discord rounded-md transition-colors hover:bg-discord-hover hover:border-discord-hover focus:outline-none focus-visible:ring-2 focus-visible:ring-discord focus-visible:ring-offset-2 focus-visible:ring-offset-bg-secondary">
                    <!-- Discord Logo SVG -->
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z" />
                    </svg>
                    Link Discord Account
                </button>
            </form>

            <!-- Info Note -->
            <div class="mt-6 p-4 bg-info-bg border border-info-border rounded-md text-left max-w-md mx-auto">
                <p class="text-xs text-info">
                    <strong>Note:</strong> You'll be redirected to Discord to authorize this application. We only request the permissions necessary for guild management and authentication.
                </p>
            </div>

            @if (!Model.HasPendingVerification)
            {
                <!-- "Or" Divider -->
                <div class="relative my-8 max-w-md mx-auto">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-border-primary"></div>
                    </div>
                    <div class="relative flex justify-center text-xs">
                        <span class="px-3 bg-bg-secondary text-text-tertiary">or</span>
                    </div>
                </div>

                <!-- Bot Verification - Initial State -->
                <div class="max-w-md mx-auto text-left">
                    <div class="flex items-start gap-3 mb-4">
                        <!-- Bot Icon -->
                        <div class="flex-shrink-0 w-10 h-10 bg-bg-tertiary rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-base font-semibold text-text-primary">Link via Discord Bot</h3>
                            <p class="text-sm text-text-secondary mt-1">
                                Already in a server with the bot? Link your account by running a command in Discord and entering a verification code here.
                            </p>
                        </div>
                    </div>

                    <!-- Start Verification Button -->
                    <form method="post" asp-page-handler="InitiateBotVerification">
                        <button type="submit" class="inline-flex items-center justify-center gap-2 py-2.5 px-4 w-full text-sm font-semibold text-text-primary bg-transparent border border-border-primary rounded-md transition-colors hover:bg-bg-hover hover:border-border-primary focus:outline-none focus-visible:ring-2 focus-visible:ring-border-focus focus-visible:ring-offset-2 focus-visible:ring-offset-bg-secondary">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                            Start Verification
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- "Or" Divider -->
                <div class="relative my-8 max-w-md mx-auto">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-border-primary"></div>
                    </div>
                    <div class="relative flex justify-center text-xs">
                        <span class="px-3 bg-bg-secondary text-text-tertiary">or</span>
                    </div>
                </div>

                <!-- Bot Verification - Pending State -->
                <div class="max-w-md mx-auto text-left">
                    <!-- Info Box with Instructions -->
                    <div class="p-4 bg-info-bg border border-info-border rounded-lg mb-6">
                        <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-info flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                            </svg>
                            <div class="text-sm text-info">
                                <p class="font-semibold mb-1">Complete verification in Discord</p>
                                <ol class="list-decimal list-inside space-y-1 text-info/90">
                                    <li>Open Discord and go to a server with the bot</li>
                                    <li>Run the command <code class="px-1.5 py-0.5 bg-info/20 rounded font-mono text-xs">/verify-account</code></li>
                                    <li>Enter the code you receive below</li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <!-- Expiry Notice -->
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-sm text-text-secondary">Verification pending</span>
                        <span class="text-xs text-warning flex items-center gap-1.5">
                            <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                            </svg>
                            Expires <span data-utc="@Model.PendingVerification!.ExpiresAtUtcIso" data-format="time">...</span>
                        </span>
                    </div>

                    <!-- Verification Code Input Form -->
                    <form method="post" asp-page-handler="VerifyCode">
                        <div class="mb-4">
                            <label asp-for="VerificationCode" class="block text-sm font-semibold text-text-primary mb-2">
                                Verification Code
                            </label>
                            <input
                                asp-for="VerificationCode"
                                type="text"
                                maxlength="7"
                                placeholder="ABC-123"
                                autocomplete="off"
                                class="w-full px-4 py-3 text-2xl font-mono uppercase text-center tracking-widest text-text-primary bg-bg-primary border border-border-primary rounded-md transition-colors hover:border-border-focus focus:outline-none focus:border-border-focus focus:ring-2 focus:ring-border-focus/20"
                                aria-describedby="code-hint"
                            />
                            <p id="code-hint" class="mt-2 text-xs text-text-tertiary">
                                Enter the 6-character code from the Discord bot
                            </p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex gap-3">
                            <button type="submit" class="btn inline-flex items-center justify-center gap-2 py-2.5 px-4 flex-1 text-sm font-semibold text-white bg-accent-orange border border-accent-orange rounded-md transition-colors hover:bg-accent-orange-hover hover:border-accent-orange-hover focus:outline-none focus-visible:ring-2 focus-visible:ring-accent-orange focus-visible:ring-offset-2 focus-visible:ring-offset-bg-secondary">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Verify
                            </button>
                        </div>
                    </form>

                    <!-- Cancel Button -->
                    <form method="post" asp-page-handler="CancelVerification" class="mt-3">
                        <button type="submit" class="btn inline-flex items-center justify-center gap-2 py-2 px-4 w-full text-sm font-semibold text-text-secondary bg-transparent border-0 rounded-md transition-colors hover:bg-bg-hover hover:text-text-primary focus:outline-none focus-visible:ring-2 focus-visible:ring-border-focus focus-visible:ring-offset-2 focus-visible:ring-offset-bg-secondary">
                            Cancel
                        </button>
                    </form>
                </div>
            }
        </div>
    }

</div>
