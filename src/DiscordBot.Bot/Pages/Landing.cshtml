}

@section Styles {
    <style>
        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Nav link styles with underline effect */
        .nav-link {
            position: relative;
            padding: 0.5rem 0;
            transition: color 0.2s ease;
        }
        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background-color: #cb4e1b;
            transition: width 0.25s ease, left 0.25s ease;
        }
        .nav-link:hover::after,
        .nav-link.active::after {
            width: 100%;
            left: 0;
        }
        .nav-link:hover {
            color: #f0f0f0;
        }
        .nav-link.active {
            color: #f0f0f0;
        }

        /* Login button - subtle but discoverable */
        .login-btn {
            opacity: 0.6;
            transition: opacity 0.2s ease-in-out;
        }
        .login-btn:hover,
        .login-btn:focus {
            opacity: 1;
        }

        /* Feature card animations */
        .feature-card {
            opacity: 0;
            animation: fadeInUp 0.6s ease-out forwards;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .feature-card:nth-child(1) { animation-delay: 0.1s; }
        .feature-card:nth-child(2) { animation-delay: 0.15s; }
        .feature-card:nth-child(3) { animation-delay: 0.2s; }
        .feature-card:nth-child(4) { animation-delay: 0.25s; }
        .feature-card:nth-child(5) { animation-delay: 0.3s; }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .feature-card:hover {
            border-color: #098ecf;
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(9, 142, 207, 0.12);
        }

        .feature-card:hover .icon-wrapper {
            transform: scale(1.1);
        }

        .icon-wrapper {
            transition: transform 0.3s ease;
        }

        /* Tech icon hover */
        .tech-icon {
            transition: all 0.3s ease;
        }
        .tech-icon:hover {
            transform: translateY(-4px);
            border-color: #098ecf;
            box-shadow: 0 8px 20px rgba(9, 142, 207, 0.15);
        }

        /* Coming soon card styling */
        .coming-soon-card {
            position: relative;
            animation-delay: 0.35s !important;
        }
        .coming-soon-card:nth-child(2) { animation-delay: 0.4s !important; }
        .coming-soon-card:nth-child(3) { animation-delay: 0.45s !important; }

        /* Screenshot placeholder with subtle scanlines */
        .screenshot-placeholder {
            position: relative;
            overflow: hidden;
        }
        .screenshot-placeholder::after {
            content: '';
            position: absolute;
            inset: 0;
            background: repeating-linear-gradient(
                0deg,
                transparent,
                transparent 2px,
                rgba(255,255,255,0.015) 2px,
                rgba(255,255,255,0.015) 4px
            );
            pointer-events: none;
        }

        /* Hero background */
        .hero-bg {
            transition: transform 0.1s ease-out, opacity 0.1s ease-out;
        }

        /* Dot pattern background */
        .dot-pattern {
            background-image: radial-gradient(circle, rgba(203, 78, 27, 0.18) 1px, transparent 1px);
            background-size: 20px 20px;
        }

        /* Section divider */
        .section-divider {
            height: 1px;
            background-color: #3a3f42;
        }

        /* Reduce motion for accessibility */
        @@media (prefers-reduced-motion: reduce) {
            .feature-card,
            .coming-soon-card {
                opacity: 1;
                animation: none;
            }
            .feature-card:hover {
                transform: none;
            }
            .animate-float-slow,
            .animate-float-medium {
                animation: none;
            }
        }
    </style>
}

