        const containerId = '@Model.ContainerId';
        const container = document.getElementById(containerId);

        /**
         * Handles style change event.
         * @@param {string} containerId - The container ID of the style selector
         */
        window.styleSelector_onStyleChange = function(containerId) {
            const container = document.getElementById(containerId);
            if (!container) return;

            const select = container.querySelector(`#${containerId}-select`);
            const slider = container.querySelector(`#${containerId}-slider`);
            const iconWrapper = container.querySelector('.style-selector__select-icon');
            const helpTextWrapper = container.querySelector('.style-selector__help-text');

            if (!select || !slider) return;

            const selectedValue = select.value;
            const selectedOption = select.options[select.selectedIndex];

            // Update container data attribute
            container.dataset.style = selectedValue;

            // Update icon
            if (iconWrapper) {
                iconWrapper.innerHTML = styleSelector_getIconSvg(selectedValue);
            }

            // Update help text
            const example = selectedOption.dataset.example || '';
            if (helpTextWrapper) {
                if (example && selectedValue) {
                    helpTextWrapper.textContent = example;
                    helpTextWrapper.style.display = 'block';
                } else {
                    helpTextWrapper.style.display = 'none';
                }
            }

            // Enable/disable intensity slider
            if (selectedValue === '') {
                slider.disabled = true;
            } else {
                slider.disabled = false;
            }

            // Trigger callback if specified
            const callback = container.dataset.callbackStyle;
            if (callback && typeof window[callback] === 'function') {
                window[callback](selectedValue);
            }
        };

        /**
         * Handles intensity change event.
         * @@param {string} containerId - The container ID of the style selector
         */
        window.styleSelector_onIntensityChange = function(containerId) {
            const container = document.getElementById(containerId);
            if (!container) return;

            const slider = container.querySelector(`#${containerId}-slider`);
            const display = container.querySelector(`#${containerId}-intensity-display`);

            if (!slider || !display) return;

            const value = parseFloat(slider.value);

            // Update display
            display.textContent = value.toFixed(1);

            // Update container data attribute
            container.dataset.intensity = value;

            // Update ARIA
            slider.setAttribute('aria-valuenow', value);

            // Trigger callback if specified
            const callback = container.dataset.callbackIntensity;
            if (callback && typeof window[callback] === 'function') {
                window[callback](value);
            }
        };

        /**
         * Loads voice capabilities and updates available styles.
         * @@param {string} containerId - The container ID of the style selector
         * @@param {string} voiceName - The voice name to fetch capabilities for
         */
        window.styleSelector_loadStyles = async function(containerId, voiceName) {
            const container = document.getElementById(containerId);
            if (!container) return;

            const select = container.querySelector(`#${containerId}-select`);
            if (!select) return;

            try {
                // Fetch voice capabilities
                const response = await fetch(`/api/portal/tts/voices/${encodeURIComponent(voiceName)}/capabilities`);
                if (!response.ok) {
                    console.warn('Failed to fetch voice capabilities:', response.statusText);
                    return;
                }

                const data = await response.json();
                const supportedStyles = data.supportedStyles || [];

                const noStylesMsg = container.querySelector('.style-selector__no-styles-message');
                const slider = container.querySelector(`#${containerId}-slider`);

                if (supportedStyles.length === 0) {
                    // Disable select and slider, show no-styles message
                    select.disabled = true;
                    if (slider) slider.disabled = true;
                    if (noStylesMsg) noStylesMsg.style.display = 'block';
                    // Reset to (None)
                    select.value = '';
                    styleSelector_onStyleChange(containerId);
                } else {
                    // Re-enable select, hide no-styles message
                    select.disabled = false;
                    if (noStylesMsg) noStylesMsg.style.display = 'none';

                    // Update option disabled states
                    const options = select.querySelectorAll('option');
                    options.forEach(option => {
                        const styleValue = option.value;

                        if (styleValue === '') {
                            // "(None)" is always enabled
                            option.disabled = false;
                        } else {
                            // Enable only if supported by voice
                            option.disabled = !supportedStyles.includes(styleValue);
                        }
                    });

                    // Check if current selection is still valid
                    const currentStyle = container.dataset.style || '';
                    if (currentStyle !== '') {
                        const isSupported = supportedStyles.includes(currentStyle);
                        if (!isSupported) {
                            // Reset to "(None)"
                            select.value = '';
                            styleSelector_onStyleChange(containerId);
                        }
                    }
                }

                // Notify EmphasisToolbar of voice emphasis capability
                if (typeof window.emphasisToolbar_updateCapability === 'function') {
                    window.emphasisToolbar_updateCapability(!!data.supportsEmphasis);
                }

                // Update container data attribute
                container.dataset.voice = voiceName;
            } catch (error) {
                console.error('Error loading voice capabilities:', error);
            }
        };

        /**
         * Gets the SVG markup for a style icon.
         * @@param {string} styleValue - The style value
         * @@returns {string} SVG HTML string
         */
        window.styleSelector_getIconSvg = function(styleValue) {
            const iconPath = styleSelector_getIconPath(styleValue);
            if (!iconPath) return '';

