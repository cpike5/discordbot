@model DiscordBot.Core.Enums.Severity
@{
    var (severityClass, label) = Model switch
    {
        DiscordBot.Core.Enums.Severity.Low => ("severity-low", "Low"),
        DiscordBot.Core.Enums.Severity.Medium => ("severity-medium", "Medium"),
        DiscordBot.Core.Enums.Severity.High => ("severity-high", "High"),
        DiscordBot.Core.Enums.Severity.Critical => ("severity-critical", "Critical"),
        _ => ("severity-low", "Unknown")
    };
    var showPulse = Model == DiscordBot.Core.Enums.Severity.Critical;
}

<span class="severity-badge @severityClass">
    @if (showPulse)
    {
        <span class="pulse-dot"></span>
    }
    @label
</span>
